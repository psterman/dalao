<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功能面板"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- 第一行图标 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 无图模式 -->
        <LinearLayout
            android:id="@+id/layout_no_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_ripple"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_no_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_image"
                    android:tint="?android:attr/textColorSecondary"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_no_image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>
            </FrameLayout>

            <TextView
                android:id="@+id/text_no_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="无图模式"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 电脑版 -->
        <LinearLayout
            android:id="@+id/layout_desktop_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_ripple"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_desktop_mode"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_desktop"
                    android:tint="?android:attr/textColorSecondary"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_desktop_mode"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>
            </FrameLayout>

            <TextView
                android:id="@+id/text_desktop_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="电脑版"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 广告过滤 -->
        <LinearLayout
            android:id="@+id/layout_ad_block"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_ripple"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_ad_block"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_block"
                    android:tint="?android:attr/textColorSecondary"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_ad_block"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>
            </FrameLayout>

            <TextView
                android:id="@+id/text_ad_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="广告过滤"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 隐身模式 -->
        <LinearLayout
            android:id="@+id/layout_incognito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_ripple"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_incognito"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_incognito"
                    android:tint="?android:attr/textColorSecondary"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_incognito"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>
            </FrameLayout>

            <TextView
                android:id="@+id/text_incognito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="隐身模式"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 第二行图标 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- 书签 -->
        <LinearLayout
            android:id="@+id/btn_bookmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_ripple"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_bookmark"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bookmark"
                    android:tint="?android:attr/textColorSecondary"/>
            </FrameLayout>

            <TextView
                android:id="@+id/text_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="书签"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 历史 -->
        <LinearLayout
            android:id="@+id/btn_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_ripple"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_history"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_history"
                    android:tint="?android:attr/textColorSecondary"/>
            </FrameLayout>

            <TextView
                android:id="@+id/text_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="历史"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 分享 -->
        <LinearLayout
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_ripple"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_share"
                    android:tint="?android:attr/textColorSecondary"/>
            </FrameLayout>

            <TextView
                android:id="@+id/text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="分享"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- 夜间模式 -->
        <LinearLayout
            android:id="@+id/btn_night_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_ripple"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_night_mode"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_night"
                    android:tint="?android:attr/textColorSecondary"/>
            </FrameLayout>

            <TextView
                android:id="@+id/text_night_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="夜间"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 