<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent">

    <!-- 简化的主选择卡片 -->
    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/md_theme_light_surface"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 标题栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_selection_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="选择AI服务"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_close_selection"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="关闭"
                    android:src="@drawable/ic_close"
                    app:tint="@color/md_theme_light_onSurfaceVariant" />

            </LinearLayout>

            <!-- 选择数量显示 -->
            <TextView
                android:id="@+id/tv_selection_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已选择: 0 个服务"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- 服务列表容器 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="300dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/ll_services_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </ScrollView>

            <!-- 按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:text="取消"
                    android:textSize="14sp"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textColor="@color/md_theme_light_onSurface"
                    app:backgroundTint="@color/md_theme_light_surfaceVariant"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="确定"
                    android:textSize="14sp"
                    app:backgroundTint="@color/md_theme_light_primary"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
