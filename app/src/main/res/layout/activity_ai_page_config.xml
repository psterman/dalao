<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/simple_mode_background_light">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/simple_mode_card_background_light">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI页面配置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/simple_mode_text_primary_light"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/simple_mode_divider_light" />

    <!-- 说明文字 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="配置不同AI页面的参数和API设置。点击项目查看详细配置。"
        android:textSize="14sp"
        android:textColor="@color/simple_mode_text_secondary_light"
        android:background="@color/simple_mode_background_light" />

    <!-- AI配置列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_ai_configs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout>
