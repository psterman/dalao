<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/dialog_background_light">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加联系人"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dialog_title_text_light"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- AI助手选项 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ai_contact_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/contact_option_card_background_light"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_ai_ball"
                app:tint="@color/ai_contact_icon_tint_light"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI助手"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/contact_option_title_text_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加AI聊天助手"
                    android:textSize="14sp"
                    android:textColor="@color/contact_option_description_text_light"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/contact_option_arrow_tint_light" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- RSS订阅选项 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rss_contact_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/contact_option_card_background_light"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_rss"
                app:tint="@color/rss_contact_icon_tint_light"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSS订阅"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/contact_option_title_text_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加RSS订阅源"
                    android:textSize="14sp"
                    android:textColor="@color/contact_option_description_text_light"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/contact_option_arrow_tint_light" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 取消按钮 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/dialog_button_text_light"
        android:backgroundTint="@color/dialog_cancel_button_background_light"
        app:cornerRadius="8dp"
        style="@style/Widget.Material3.Button" />

</LinearLayout> 