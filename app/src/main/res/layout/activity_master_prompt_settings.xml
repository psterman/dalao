<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/elderly_background"
    tools:context=".MasterPromptSettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/elderly_primary"
            app:title="@string/title_ai_assistant_center"
            app:titleTextColor="@color/elderly_button_text_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/elderly_button_text_primary"
            style="@style/Widget.MaterialComponents.Toolbar.Primary" />

        <!-- 副标题说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_ai_assistant_center"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="4dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 档案管理区域 - 从AI助手基础信息页面移植 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/elderly_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="档案管理"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/elderly_text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- 当前档案显示 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前档案："
                        android:textSize="14sp"
                        android:textColor="@color/elderly_text_primary" />

                    <TextView
                        android:id="@+id/current_profile_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="默认画像"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/elderly_button_primary"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- 选择助手档案区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择助手档案"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/elderly_text_primary"
                        android:layout_marginBottom="8dp" />

                    <!-- 档案列表RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/profiles_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:clipToPadding="false"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:visibility="visible"
                        tools:listitem="@layout/item_prompt_profile" />

                    <!-- 空状态提示 -->
                    <TextView
                        android:id="@+id/empty_profiles_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无档案，请点击下方按钮创建"
                        android:textSize="12sp"
                        android:textColor="@color/elderly_text_secondary"
                        android:gravity="center"
                        android:padding="16dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- 档案操作按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/select_profile_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="选择档案"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="@color/elderly_button_secondary"
                        android:textColor="@color/elderly_text_primary"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:icon="@drawable/ic_person"
                        app:iconSize="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/new_profile_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="新建档案"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="@color/elderly_button_primary"
                        android:textColor="@color/elderly_button_text_primary"
                        style="@style/Widget.MaterialComponents.Button"
                        app:icon="@drawable/ic_add"
                        app:iconSize="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/manage_profiles_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="管理档案"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/elderly_button_secondary"
                        android:textColor="@color/elderly_text_primary"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:icon="@drawable/ic_settings"
                        app:iconSize="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择、新建或管理您的AI助手档案"
                    android:textSize="12sp"
                    android:textColor="@color/elderly_text_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 配置标签页 -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:tabMode="scrollable"
            app:tabGravity="start"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorGravity="bottom"
            app:tabIndicatorHeight="3dp"
            app:tabIndicatorColor="?attr/colorPrimary"
            app:tabTextColor="?android:attr/textColorSecondary"
            app:tabSelectedTextColor="?attr/colorPrimary"
            app:tabRippleColor="?attr/colorPrimary"
            android:background="@android:color/transparent"
            style="@style/Widget.MaterialComponents.TabLayout" />

        <!-- 内容区域 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- 保存按钮 -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="@string/save_profile"
        android:backgroundTint="@color/elderly_button_primary"
        android:textColor="@color/elderly_button_text_primary"
        app:icon="@drawable/ic_save"
        app:iconSize="20dp"
        app:iconTint="@color/elderly_button_text_primary" />
</androidx.coordinatorlayout.widget.CoordinatorLayout> 