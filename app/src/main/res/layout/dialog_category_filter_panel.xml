<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ai_assistant_card_background_light">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/ai_assistant_primary">

        <ImageButton
            android:id="@+id/category_filter_panel_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="返回"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/category_filter_panel_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分类筛选"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" />
    </LinearLayout>

    <!-- 子分类标签容器 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择子分类"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/ai_assistant_text_primary"
                android:layout_marginBottom="12dp" />

            <!-- 子分类标签容器 -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/subcategory_chips_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacing="8dp"
                app:chipSpacingVertical="12dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>



