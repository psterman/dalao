<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:checkable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/material_dialog_border"
    app:cardBackgroundColor="@color/material_dialog_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- AI图标 -->
        <ImageView
            android:id="@+id/ai_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_smart_toy"
            android:background="@drawable/ai_icon_background"
            android:padding="8dp"
            android:layout_marginEnd="16dp" />

        <!-- AI信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ai_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DeepSeek"
                android:textSize="16sp"
                android:textColor="@color/material_dialog_text_primary"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/ai_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性能强劲，支持中文"
                android:textSize="14sp"
                android:textColor="@color/material_dialog_text_secondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- 状态指示器 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:tint="@color/material_wechat_primary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已配置"
                android:textSize="12sp"
                android:textColor="@color/material_wechat_primary"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 复选框 -->
        <CheckBox
            android:id="@+id/ai_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:buttonTint="@color/material_dialog_checkbox_tint" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
