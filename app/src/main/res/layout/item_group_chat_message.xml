<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_message_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="2dp">

    <!-- 用户消息容器 -->
    <LinearLayout
        android:id="@+id/user_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <!-- 左侧空间占位 -->
        <View
            android:id="@+id/user_left_spacer"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- 用户消息内容区域 -->
        <LinearLayout
            android:id="@+id/user_content_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/user_message_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:cardBackgroundColor="@color/material_chat_user_bubble_light"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/user_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/material_chat_user_text_light"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.01"
                    android:maxWidth="280dp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/user_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:textSize="12sp"
                android:textColor="@color/material_chat_timestamp_light"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- 右侧空间占位 -->
        <View
            android:id="@+id/user_right_spacer"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 群聊AI回复容器 -->
    <LinearLayout
        android:id="@+id/group_ai_replies_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 群聊回复标题 -->
        <TextView
            android:id="@+id/group_replies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:text="AI回复"
            android:textSize="14sp"
            android:textColor="@color/group_chat_color"
            android:fontFamily="sans-serif-medium" />

        <!-- AI回复列表容器 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ai_replies_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

    <!-- 单个AI消息容器（用于非群聊模式） -->
    <LinearLayout
        android:id="@+id/single_ai_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <!-- AI头像 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ai_avatar_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            app:cardBackgroundColor="@color/material_dialog_surface_variant"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/material_chat_border_light">

            <ImageView
                android:id="@+id/ai_avatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_smart_toy"
                android:tint="@color/material_wechat_primary" />

        </com.google.android.material.card.MaterialCardView>

        <!-- AI消息内容区域 -->
        <LinearLayout
            android:id="@+id/ai_content_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- AI名称 -->
            <TextView
                android:id="@+id/ai_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="AI助手"
                android:textSize="14sp"
                android:textColor="@color/material_chat_secondary_text_light"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ai_message_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/material_chat_ai_bubble_light"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/material_chat_border_light">

                <TextView
                    android:id="@+id/ai_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/material_chat_ai_text_light"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.01"
                    android:maxWidth="280dp" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/ai_message_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/ai_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/material_chat_timestamp_light"
                    android:fontFamily="sans-serif" />

                <!-- 操作按钮 -->
                <ImageButton
                    android:id="@+id/btn_copy_message"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_copy"
                    android:tint="@color/material_chat_timestamp_light"
                    android:contentDescription="复制消息"
                    android:padding="4dp" />

                <ImageButton
                    android:id="@+id/btn_regenerate"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_refresh"
                    android:tint="@color/material_chat_timestamp_light"
                    android:contentDescription="重新生成"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 右侧空间占位 -->
        <View
            android:id="@+id/ai_right_spacer"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>