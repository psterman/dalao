<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center">

    <!-- 快捷方式图标 -->
    <ImageView
        android:id="@+id/shortcut_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:background="@drawable/engine_icon_background"
        android:src="@drawable/ic_default_search_engine" />

    <!-- 快捷方式名称 -->
    <TextView
        android:id="@+id/shortcut_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="快捷方式"
        android:textSize="12sp"
        android:textColor="@color/simple_mode_text_primary_light"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end" />

</LinearLayout>
