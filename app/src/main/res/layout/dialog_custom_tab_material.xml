<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- 标题区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tab"
            android:tint="@color/material_wechat_primary"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="创建自定义标签页"
            android:textSize="20sp"
            android:textColor="@color/material_dialog_text_primary"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- 说明文字 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为您的AI助手创建分组标签，便于管理和快速访问"
        android:textSize="14sp"
        android:textColor="@color/material_dialog_text_secondary"
        android:lineSpacingExtra="2dp"
        android:layout_marginBottom="20dp" />

    <!-- 输入框 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tab_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/material_dialog_input_background"
        app:boxStrokeColor="@color/material_dialog_input_stroke"

        app:hintTextColor="@color/material_dialog_text_hint"
        app:startIconDrawable="@drawable/ic_label"
        app:startIconTint="@color/material_wechat_primary"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:helperText="建议使用简短易懂的名称">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tab_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="标签页名称"
            android:inputType="text"
            android:maxLength="10"
            android:textColor="@color/material_dialog_text_primary"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 预设标签建议 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常用标签建议："
        android:textSize="14sp"
        android:textColor="@color/material_dialog_text_secondary"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/suggested_tags_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_work"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作助手"
            app:chipIcon="@drawable/ic_work" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_study"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习助手"
            app:chipIcon="@drawable/ic_school" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_creative"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创作助手"
            app:chipIcon="@drawable/ic_create" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_life"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活助手"
            app:chipIcon="@drawable/ic_home" />

    </com.google.android.material.chip.ChipGroup>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.MaterialDialog.Button.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginEnd="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create"
            style="@style/Widget.MaterialDialog.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建标签页" />

    </LinearLayout>

</LinearLayout>
