<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- 搜索框 -->
    <LinearLayout
        android:id="@+id/widget_search_box"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/search_box_background"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:tint="@color/text_secondary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索应用、AI助手或网页内容..."
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:layout_marginLeft="16dp"
            android:singleLine="true" />

    </LinearLayout>

    <!-- 应用图标区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 分类标题：AI助手 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤖 AI助手"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- AI引擎行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ai_icon_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/widget_icon_ripple"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_zhipu"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智谱"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ai_icon_2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/widget_icon_ripple"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_deepseek"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DeepSeek"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ai_icon_3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/widget_icon_ripple"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI助手"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="6dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ai_icon_4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/widget_icon_ripple"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI助手"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="6dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- 分类标题：应用 & 搜索 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 应用 &amp; 🔍 搜索"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- 应用和搜索引擎行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/app_icon_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/widget_icon_ripple"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应用"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/app_icon_2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/widget_icon_ripple"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应用"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/search_icon_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/widget_icon_ripple"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baidu"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="百度"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/search_icon_2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/widget_icon_ripple"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_google"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
