<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_chat_background_light">

    <!-- 工具栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_chat_toolbar_background_light"
        app:title="自适应对话界面"
        app:titleTextColor="@color/material_wechat_on_primary"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/material_wechat_on_primary" />

    <!-- 消息列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingVertical="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- 输入区域 -->
    <include
        layout="@layout/chat_input_adaptive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
