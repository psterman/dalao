<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 卡片头部 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@color/card_header_background"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/card_engine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索引擎"
                android:textSize="12sp"
                android:textColor="@color/card_engine_text"
                android:background="@drawable/card_engine_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="搜索结果标题"
                android:textSize="14sp"
                android:textColor="@color/card_title_text"
                android:maxLines="2"
                android:ellipsize="end"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/card_app_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="4dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="打开应用" />

        </LinearLayout>

        <!-- WebView容器 -->
        <FrameLayout
            android:id="@+id/card_webview_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/card_webview_background">
            
            <!-- 浮动按钮容器 -->
            <LinearLayout
                android:id="@+id/card_floating_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:elevation="8dp"
                android:visibility="gone">
                
                <!-- App图标（app已安装时显示） -->
                <ImageView
                    android:id="@+id/card_app_icon_floating"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/card_floating_button_background"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="打开应用" />
                
                <!-- 下载按钮 -->
                <Button
                    android:id="@+id/card_download_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="下载app"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:minWidth="60dp"
                    android:minHeight="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:background="@drawable/card_floating_button_background"
                    android:visibility="gone"
                    android:contentDescription="下载app" />
                
                <!-- 打开按钮 -->
                <Button
                    android:id="@+id/card_open_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在卡片内打开"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:minWidth="80dp"
                    android:minHeight="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:background="@drawable/card_floating_button_background_primary"
                    android:contentDescription="在卡片内打开" />
                
            </LinearLayout>
            
        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


