<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 卡片头部 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@color/card_header_background"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/card_engine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索引擎"
                android:textSize="12sp"
                android:textColor="@color/card_engine_text"
                android:background="@drawable/card_engine_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="搜索结果标题"
                android:textSize="14sp"
                android:textColor="@color/card_title_text"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- WebView容器 -->
        <FrameLayout
            android:id="@+id/card_webview_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/card_webview_background" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


