<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?android:attr/colorBackground"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground">

        <!-- 拖动手柄 -->
        <ImageView
            android:id="@+id/drag_handle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:contentDescription="拖动"
            app:tint="?android:attr/textColorSecondary" />

        <!-- 组名 -->
        <TextView
            android:id="@+id/group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:clickable="true"
            android:focusable="true" />

        <!-- 置顶按钮 -->
        <ImageButton
            android:id="@+id/btn_pin_group"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="置顶"
            android:src="@drawable/ic_pin_outline"
            app:tint="?android:attr/textColorSecondary" />

        <!-- 编辑按钮 -->
        <ImageButton
            android:id="@+id/btn_edit_group"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="编辑"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="?android:attr/textColorSecondary" />

        <!-- 删除按钮 -->
        <ImageButton
            android:id="@+id/btn_delete_group"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="删除"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@android:color/holo_red_dark" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

