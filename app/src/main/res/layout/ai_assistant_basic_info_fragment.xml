<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ai_assistant_center_background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 基础信息标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:tint="@color/ai_assistant_primary"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="基础信息"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/ai_assistant_text_primary" />
        </LinearLayout>

        <!-- 档案名称 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="档案名称"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/ai_assistant_text_primary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/ai_assistant_input_stroke"
                    app:hintTextColor="@color/ai_assistant_text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="默认画像"
                        android:textColor="@color/ai_assistant_text_primary"
                        android:textColorHint="@color/ai_assistant_text_hint"
                        android:background="@color/ai_assistant_input_background"
                        android:drawableStart="@drawable/ic_edit"
                        android:drawablePadding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为您的AI助手起个名字,如学习助手、工作伙伴"
                    android:textSize="12sp"
                    android:textColor="@color/ai_assistant_text_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 我是谁 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是谁"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/ai_assistant_text_primary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/ai_assistant_input_stroke"
                    app:hintTextColor="@color/ai_assistant_text_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/identity_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="一个乐于助人的通用AI助手"
                        android:textColor="@color/ai_assistant_text_primary"
                        android:textColorHint="@color/ai_assistant_text_hint"
                        android:background="@color/ai_assistant_input_background"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述您的身份角色,如大学生、程序员、设计师"
                    android:textSize="12sp"
                    android:textColor="@color/ai_assistant_text_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 对话风格 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对话风格"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/ai_assistant_text_primary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/ai_assistant_input_stroke"
                    app:hintTextColor="@color/ai_assistant_text_hint"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/conversation_style_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="选择对话风格"
                        android:textColor="@color/ai_assistant_text_primary"
                        android:textColorHint="@color/ai_assistant_text_hint"
                        android:background="@color/ai_assistant_input_background"
                        android:drawableStart="@drawable/ic_mic"
                        android:drawablePadding="12dp"
                        android:focusable="false"
                        android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择您喜欢的AI对话方式"
                    android:textSize="12sp"
                    android:textColor="@color/ai_assistant_text_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 回答格式 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回答格式"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/ai_assistant_text_primary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/ai_assistant_input_stroke"
                    app:hintTextColor="@color/ai_assistant_text_hint"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/answer_format_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="选择回答格式"
                        android:textColor="@color/ai_assistant_text_primary"
                        android:textColorHint="@color/ai_assistant_text_hint"
                        android:background="@color/ai_assistant_input_background"
                        android:drawableStart="@drawable/ic_document"
                        android:drawablePadding="12dp"
                        android:focusable="false"
                        android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择您喜欢的回答格式"
                    android:textSize="12sp"
                    android:textColor="@color/ai_assistant_text_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 默认AI搜索模式开关 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索模式设置"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/ai_assistant_text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- 默认AI搜索模式开关 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="默认AI搜索模式"
                            android:textSize="14sp"
                            android:textColor="@color/ai_assistant_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="启用后，默认使用AI搜索引擎进行搜索"
                            android:textSize="12sp"
                            android:textColor="@color/ai_assistant_text_secondary" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/ai_search_mode_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="@color/ai_assistant_primary"
                        app:trackTint="@color/ai_assistant_primary" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 保存按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_profile_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="保存档案"
            android:textSize="16sp"
            android:backgroundTint="@color/ai_assistant_primary"
            android:textColor="@color/ai_assistant_button_text"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_document"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

    </LinearLayout>

</ScrollView>
