<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="16dp">

    <!-- AI头像 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ai_avatar_container"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/material_dialog_surface_variant"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/material_chat_border_light">

        <ImageView
            android:id="@+id/ai_avatar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_smart_toy"
            android:tint="@color/ai_icon_color" />

    </com.google.android.material.card.MaterialCardView>

    <!-- AI回复内容区域 -->
    <LinearLayout
        android:id="@+id/ai_reply_content_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- AI名称和状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/ai_name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI助手"
                android:textSize="13sp"
                android:textColor="@color/group_chat_color"
                android:fontFamily="sans-serif-medium" />

            <!-- 回复状态指示器 -->
            <TextView
                android:id="@+id/ai_reply_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复中..."
                android:textSize="11sp"
                android:textColor="@color/material_chat_timestamp_light"
                android:fontFamily="sans-serif"
                android:visibility="gone" />

            <!-- 进度指示器 -->
            <ProgressBar
                android:id="@+id/ai_reply_progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- AI回复消息气泡 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ai_reply_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/material_chat_ai_bubble_light"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/material_chat_border_light">

            <TextView
                android:id="@+id/ai_reply_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:textColor="@color/material_chat_ai_text_light"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01" />

        </com.google.android.material.card.MaterialCardView>

        <!-- 回复操作和时间 -->
        <LinearLayout
            android:id="@+id/ai_reply_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/ai_reply_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="@color/material_chat_timestamp_light"
                android:fontFamily="sans-serif" />

            <!-- 操作按钮 -->
            <ImageButton
                android:id="@+id/btn_copy_reply"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_copy"
                android:tint="@color/material_chat_timestamp_light"
                android:contentDescription="复制回复"
                android:padding="2dp"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btn_regenerate_reply"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_refresh"
                android:tint="@color/material_chat_timestamp_light"
                android:contentDescription="重新生成回复"
                android:padding="2dp"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/btn_like_reply"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_thumb_up"
                android:tint="@color/material_chat_timestamp_light"
                android:contentDescription="点赞回复"
                android:padding="2dp"
                android:scaleType="centerInside" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>