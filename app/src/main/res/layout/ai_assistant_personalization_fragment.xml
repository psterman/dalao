<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ai_assistant_center_background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 个性化标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:tint="@color/ai_assistant_primary"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="个性化"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/ai_assistant_text_primary" />
        </LinearLayout>

        <!-- 外观设置 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="外观设置"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/ai_assistant_text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- 主题选择 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主题风格"
                        android:textSize="14sp"
                        android:textColor="@color/ai_assistant_text_primary"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/theme_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/light_theme_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="浅色主题"
                            android:textSize="14sp"
                            android:textColor="@color/ai_assistant_text_primary"
                            android:checked="true"
                            android:buttonTint="@color/ai_assistant_primary"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/dark_theme_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="深色主题"
                            android:textSize="14sp"
                            android:textColor="@color/ai_assistant_text_primary"
                            android:buttonTint="@color/ai_assistant_primary"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/auto_theme_radio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="跟随系统"
                            android:textSize="14sp"
                            android:textColor="@color/ai_assistant_text_primary"
                            android:buttonTint="@color/ai_assistant_primary" />
                    </RadioGroup>
                </LinearLayout>

                <!-- 字体大小 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="字体大小"
                        android:textSize="14sp"
                        android:textColor="@color/ai_assistant_text_primary"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/font_size_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="3"
                        android:progress="1"
                        android:progressTint="@color/ai_assistant_primary"
                        android:thumbTint="@color/ai_assistant_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小"
                            android:textSize="12sp"
                            android:textColor="@color/ai_assistant_text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中"
                            android:textSize="12sp"
                            android:textColor="@color/ai_assistant_text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大"
                            android:textSize="12sp"
                            android:textColor="@color/ai_assistant_text_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 通知设置 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知设置"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/ai_assistant_text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- 推送通知 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推送通知"
                            android:textSize="14sp"
                            android:textColor="@color/ai_assistant_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="接收AI助手消息通知"
                            android:textSize="12sp"
                            android:textColor="@color/ai_assistant_text_secondary" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/push_notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/ai_assistant_primary"
                        app:trackTint="@color/ai_assistant_primary" />
                </LinearLayout>

                <!-- 声音提醒 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="声音提醒"
                            android:textSize="14sp"
                            android:textColor="@color/ai_assistant_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新消息声音提醒"
                            android:textSize="12sp"
                            android:textColor="@color/ai_assistant_text_secondary" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/sound_notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="@color/ai_assistant_primary"
                        app:trackTint="@color/ai_assistant_primary" />
                </LinearLayout>

                <!-- 震动提醒 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="震动提醒"
                            android:textSize="14sp"
                            android:textColor="@color/ai_assistant_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新消息震动提醒"
                            android:textSize="12sp"
                            android:textColor="@color/ai_assistant_text_secondary" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/vibration_notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/ai_assistant_primary"
                        app:trackTint="@color/ai_assistant_primary" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 隐私设置 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐私设置"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/ai_assistant_text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- 数据收集 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数据收集"
                            android:textSize="14sp"
                            android:textColor="@color/ai_assistant_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="允许收集使用数据以改善体验"
                            android:textSize="12sp"
                            android:textColor="@color/ai_assistant_text_secondary" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/data_collection_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/ai_assistant_primary"
                        app:trackTint="@color/ai_assistant_primary" />
                </LinearLayout>

                <!-- 匿名化 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="匿名化处理"
                            android:textSize="14sp"
                            android:textColor="@color/ai_assistant_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对个人数据进行匿名化处理"
                            android:textSize="12sp"
                            android:textColor="@color/ai_assistant_text_secondary" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/anonymization_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/ai_assistant_primary"
                        app:trackTint="@color/ai_assistant_primary" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
