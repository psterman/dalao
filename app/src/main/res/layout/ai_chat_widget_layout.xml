<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ai_chat_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/ai_chat_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_ai_chat"
        android:layout_marginEnd="12dp"
        android:contentDescription="AI对话图标" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ai_chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI对话"
            android:textSize="14sp"
            android:textColor="@color/widget_text_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ai_chat_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能助手对话"
            android:textSize="11sp"
            android:textColor="@color/widget_text_secondary"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ai_chat_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_arrow_forward"
        android:contentDescription="进入"
        android:alpha="0.6" />

</LinearLayout>
