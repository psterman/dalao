<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ai_chat_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background_ai"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:elevation="2dp">

    <!-- AI图标容器 -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/widget_icon_background_material"
            android:elevation="1dp" />

        <ImageView
            android:id="@+id/ai_chat_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_ai_chat"
            android:tint="@color/widget_ai_primary"
            android:contentDescription="AI对话图标" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ai_chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI智能对话"
            android:textSize="16sp"
            android:textColor="@color/widget_on_surface"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/ai_chat_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="与AI助手开始对话"
            android:textSize="12sp"
            android:textColor="@color/widget_on_surface_variant"
            android:fontFamily="sans-serif"
            android:layout_marginTop="2dp"
            android:letterSpacing="0.02" />

    </LinearLayout>

    <!-- 箭头图标 -->
    <ImageView
        android:id="@+id/ai_chat_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_forward"
        android:tint="@color/widget_on_surface_variant"
        android:contentDescription="进入"
        android:alpha="0.7" />

</LinearLayout>
