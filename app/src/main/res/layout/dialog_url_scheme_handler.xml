<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- 图标 -->
    <ImageView
        android:id="@+id/dialog_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_download"
        android:contentDescription="对话框图标" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="需要安装应用"
        android:textColor="@color/simple_mode_text_primary_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- 消息内容 -->
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="检测到应用链接，但您的设备上未安装该应用。"
        android:textColor="@color/simple_mode_text_secondary_light"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.2"
        android:gravity="center" />

    <!-- 按钮容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- 下载按钮 -->
        <Button
            android:id="@+id/btn_download"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="下载应用"
            android:textColor="@android:color/white"
            android:background="@drawable/button_primary_background"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- 网页版按钮 -->
        <Button
            android:id="@+id/btn_web"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="网页版"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/button_secondary_background"
            android:textSize="14sp" />

        <!-- 取消按钮 -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="取消"
            android:textColor="@color/simple_mode_text_secondary_light"
            android:background="@drawable/button_cancel_background"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
