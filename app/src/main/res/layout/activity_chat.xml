<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_chat_background">

    <!-- Material Design标题栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_chat_toolbar_background"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/material_chat_toolbar_icon"
        app:titleTextColor="@color/material_chat_toolbar_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人名称"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/material_chat_toolbar_text" />

                <TextView
                    android:id="@+id/contact_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线"
                    android:textSize="12sp"
                    android:textColor="@color/material_chat_toolbar_subtitle" />

                <TextView
                    android:id="@+id/reply_status_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在回复..."
                    android:textSize="11sp"
                    android:textColor="@color/ai_icon_color"
                    android:visibility="gone"
                    android:drawableStart="@drawable/ic_typing"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- AI配置选项按钮 -->
            <ImageButton
                android:id="@+id/ai_config_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_settings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#1976D2"
                android:contentDescription="AI配置" />

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>


    <!-- 消息列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messages_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:clipToPadding="false" />

    <!-- 工具栏区域 - 输入框正上方 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/material_chat_surface"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:elevation="2dp">

        <!-- 左侧空白区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

        </LinearLayout>

        <!-- 工具栏按钮组 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/toolbar_buttons_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp">

            <!-- API状态指示器 -->
            <TextView
                android:id="@+id/api_status_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/api_status_indicator"
                android:gravity="center"
                android:text="●"
                android:textColor="@color/api_status_unknown"
                android:textSize="10sp"
                android:contentDescription="API状态" />

            <!-- 聊天记录按钮 -->
            <ImageButton
                android:id="@+id/chat_history_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_history"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#4CAF50"
                android:contentDescription="聊天记录" />

            <!-- 搜索按钮 -->
            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_search"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#4CAF50"
                android:contentDescription="搜索聊天记录" />

            <!-- 清空对话按钮 -->
            <ImageButton
                android:id="@+id/clear_chat_button_toolbar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_clear_all"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#4CAF50"
                android:contentDescription="清空对话" />

            <!-- 加载默认画像按钮（人物造型） -->
            <ImageButton
                android:id="@+id/load_profile_button_toolbar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_person_profile"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#4CAF50"
                android:contentDescription="加载默认画像" />

            <!-- 设置按钮（移到最右边） -->
            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_settings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#4CAF50"
                android:contentDescription="聊天设置" />

        </LinearLayout>

    </LinearLayout>

    <!-- 输入区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/simple_mode_surface_light"
        android:elevation="4dp">

        <!-- AI助手档案列表 -->
        <HorizontalScrollView
            android:id="@+id/prompt_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/prompt_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" />

        </HorizontalScrollView>

        <!-- 功能按钮区域已整合到工具栏 -->

        <!-- 输入和按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <EditText
                android:id="@+id/message_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:background="@drawable/message_input_background"
                android:hint="输入消息..."
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textColor="@color/simple_mode_input_text_light"
                android:textColorHint="@color/simple_mode_input_hint_light"
                android:textSize="16sp"
                android:maxLines="4"
                android:minHeight="48dp" />

            <ImageButton
                android:id="@+id/send_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send"
                android:background="@drawable/send_button_background"
                android:tint="@color/simple_mode_button_text_light"
                android:contentDescription="发送"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>