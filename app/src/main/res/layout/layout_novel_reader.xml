<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    android:clickable="true"
    android:focusable="true">

    <!-- 阅读内容区域 -->
    <ScrollView
        android:id="@+id/reader_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/reader_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/reader_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:lineSpacingMultiplier="1.5"
                android:textColor="#333333" />
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:gravity="center">
                
                <Button
                    android:id="@+id/btn_prev_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一章"
                    android:layout_marginEnd="16dp"/>
                    
                <Button
                    android:id="@+id/btn_next_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一章" />
            </LinearLayout>
            
            <!-- 底部占位，防止内容被遮挡 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>

    <!-- 顶部工具栏 (默认隐藏) -->
    <RelativeLayout
        android:id="@+id/reader_top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F0F0F0"
        android:elevation="4dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_exit_reader"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/reader_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="阅读模式"
            android:textSize="18sp"
            android:textColor="#333333" />
    </RelativeLayout>

    <!-- 底部工具栏 (默认隐藏) -->
    <LinearLayout
        android:id="@+id/reader_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="#F0F0F0"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textColor="#333333"
            android:background="?attr/selectableItemBackground" />
            
        <TextView
            android:id="@+id/btn_catalog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="目录"
            android:textColor="#333333"
            android:background="?attr/selectableItemBackground" />
            
        <TextView
            android:id="@+id/btn_night_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="夜间"
            android:textColor="#333333"
            android:background="?attr/selectableItemBackground" />
    </LinearLayout>
    
    <!-- 加载中提示 -->
    <ProgressBar
        android:id="@+id/reader_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
