<?xml version="1.0" encoding="utf-8"?>
<!--
  简易模式搜索tab中图片长按弹出菜单
  根布局是一个全屏的 FrameLayout，作为触摸拦截层。
  它本身是透明的，不会影响视觉，但能捕获所有屏幕触摸事件。
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!--
      这是实际显示的菜单内容。
      它被包裹在拦截层之内，通过设置 layout_gravity 来定位。
    -->
    <LinearLayout
        android:id="@+id/simple_mode_image_menu_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/light_menu_background"
        android:paddingVertical="8dp"
        android:minWidth="160dp">

        <!-- 进入看图模式 -->
        <TextView
            android:id="@+id/action_view_image_mode"
            style="@style/LightTextSelectionMenuItem"
            android:text="进入看图模式"
            android:drawableStart="@drawable/ic_image"
            android:drawablePadding="8dp" />

        <!-- 保存图片 -->
        <TextView
            android:id="@+id/action_save_image"
            style="@style/LightTextSelectionMenuItem"
            android:text="保存图片"
            android:drawableStart="@drawable/ic_save"
            android:drawablePadding="8dp" />

        <!-- 复制图片链接 -->
        <TextView
            android:id="@+id/action_copy_image_url"
            style="@style/LightTextSelectionMenuItem"
            android:text="复制图片链接"
            android:drawableStart="@drawable/ic_copy"
            android:drawablePadding="8dp" />

        <!-- 分享图片 -->
        <TextView
            android:id="@+id/action_share_image"
            style="@style/LightTextSelectionMenuItem"
            android:text="分享图片"
            android:drawableStart="@drawable/ic_share"
            android:drawablePadding="8dp" />

        <!-- 以图搜图 -->
        <TextView
            android:id="@+id/action_search_by_image"
            style="@style/LightTextSelectionMenuItem"
            android:text="以图搜图"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp" />

        <!-- 识别二维码 -->
        <TextView
            android:id="@+id/action_recognize_qr"
            style="@style/LightTextSelectionMenuItem"
            android:text="识别二维码"
            android:drawableStart="@drawable/ic_qr_code"
            android:drawablePadding="8dp" />

        <!-- 设为壁纸 -->
        <TextView
            android:id="@+id/action_set_wallpaper"
            style="@style/LightTextSelectionMenuItem"
            android:text="设为壁纸"
            android:drawableStart="@drawable/ic_wallpaper"
            android:drawablePadding="8dp" />

        <!-- 屏蔽广告 -->
        <TextView
            android:id="@+id/action_block_ads"
            style="@style/LightTextSelectionMenuItem"
            android:text="屏蔽广告"
            android:drawableStart="@drawable/ic_block_ads"
            android:drawablePadding="8dp" />

    </LinearLayout>

</FrameLayout>
