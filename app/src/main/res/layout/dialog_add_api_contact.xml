<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/dialog_background_light">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加AI助手"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dialog_title_text_light"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- AI模型选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择AI模型 *"
        android:textSize="14sp"
        android:textColor="@color/dialog_title_text_light"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/ai_model_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- AI助手名称（自动填充） -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI助手名称"
        android:textSize="14sp"
        android:textColor="@color/dialog_title_text_light"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:enabled="false"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- API地址（自动填充） -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API地址"
        android:textSize="14sp"
        android:textColor="@color/dialog_title_text_light"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/api_url_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        android:maxLines="1"
        android:enabled="false"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- 模型名称（自动填充） -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模型名称"
        android:textSize="14sp"
        android:textColor="@color/dialog_title_text_light"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/model_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:enabled="false"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- API密钥 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API密钥 *"
        android:textSize="14sp"
        android:textColor="@color/dialog_title_text_light"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/api_key_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="请输入API密钥"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- 取消按钮 -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="取消"
            android:textColor="@color/dialog_button_text_light"
            android:background="@color/dialog_cancel_button_background_light"
            android:padding="12dp"
            android:minWidth="80dp" />

        <!-- 确认按钮 -->
        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textColor="@color/white"
            android:background="@color/primary"
            android:padding="12dp"
            android:minWidth="80dp" />

    </LinearLayout>

</LinearLayout>
