<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/widget_background_color">

    <!-- 应用图标 -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="16dp" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/configure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配置AI搜索小组件"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/widget_text_color"
        android:layout_marginBottom="16dp" />

    <!-- 描述 -->
    <TextView
        android:id="@+id/configure_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击确认将小组件添加到桌面，您可以通过小组件快速访问AI对话、应用搜索和网络搜索功能。"
        android:textSize="14sp"
        android:textColor="@color/widget_hint_color"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <!-- 功能预览 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <!-- AI对话预览 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/widget_button_background"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_ai_chat"
                android:tint="@color/widget_ai_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI对话"
                android:textSize="12sp"
                android:textColor="@color/widget_text_color"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- 应用搜索预览 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/widget_button_background"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_app_search"
                android:tint="@color/widget_app_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用搜索"
                android:textSize="12sp"
                android:textColor="@color/widget_text_color"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- 网络搜索预览 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/widget_button_background"
            android:layout_marginStart="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_web_search"
                android:tint="@color/widget_web_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络搜索"
                android:textSize="12sp"
                android:textColor="@color/widget_text_color"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 取消按钮 -->
        <Button
            android:id="@+id/configure_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/widget_hint_color"
            android:background="@drawable/widget_button_background"
            android:layout_marginEnd="8dp"
            style="?android:attr/buttonBarButtonStyle" />

        <!-- 确认按钮 -->
        <Button
            android:id="@+id/configure_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认添加"
            android:textColor="@android:color/white"
            android:background="@drawable/widget_confirm_button_background"
            android:layout_marginStart="8dp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>
