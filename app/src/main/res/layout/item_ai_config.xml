<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/simple_mode_card_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- AI图标 -->
        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_web_default"
            android:scaleType="centerCrop" />

        <!-- 文字信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- AI名称 -->
            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI名称"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/simple_mode_text_primary_light"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- AI描述 -->
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="AI描述信息"
                android:textSize="14sp"
                android:textColor="@color/simple_mode_text_secondary_light"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- 配置状态 -->
            <TextView
                android:id="@+id/text_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="配置状态"
                android:textSize="12sp"
                android:textColor="@color/simple_mode_accent_light"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- 箭头图标 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_forward"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
