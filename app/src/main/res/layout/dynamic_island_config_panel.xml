<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/config_panel_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/dynamic_island_panel_background"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/config_panel_animation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_fileName="onboarding_step_1.json" />

        <!-- Selected Assistant Prompt Display -->
        <TextView
            android:id="@+id/selected_assistant_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorPrimary"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="当前助手: 论文助手"
            tools:visibility="visible" />

        <!-- App Search Results Preview (Moved to top) -->
        <FrameLayout
            android:id="@+id/app_search_results_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/app_search_results_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:overScrollMode="never" />

            <ImageButton
                android:id="@+id/close_app_search_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="关闭应用建议"
                android:src="@drawable/ic_close"
                app:tint="?android:attr/textColorSecondary" />
        </FrameLayout>

        <!-- Input Area with App Button Outside -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- 最近选中的APP按钮 - 移到搜索框外围左边 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/recent_app_button"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/dynamic_island_button_background"
                android:contentDescription="最近选中的APP"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_apps"
                app:icon="@drawable/ic_apps"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="@color/dynamic_island_button_icon" />

            <!-- 搜索框区域 -->
            <LinearLayout
                android:id="@+id/input_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dynamic_island_input_background"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp">

                <EditText
                    android:id="@+id/search_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="输入搜索内容或指令..."
                    android:textColor="@color/dynamic_island_input_text"
                    android:textColorHint="@color/dynamic_island_input_hint"
                    android:textSize="16sp"
                    android:imeOptions="actionSearch"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="5"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/search_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:alpha="0.5"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/ic_send_plane"
                    app:tint="@color/dynamic_island_send_icon_tint" />
            </LinearLayout>
        </LinearLayout>

        <!-- Slot Container -->
        <LinearLayout
            android:id="@+id/slots_container"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include
                layout="@layout/triple_browser_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- AI 助手窗口 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ai_assistant_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:minHeight="200dp"
            app:cardBackgroundColor="@color/deepseek_response_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- AI 服务选择区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_ai_assistant"
                        app:tint="@color/deepseek_icon_tint" />

                    <Spinner
                        android:id="@+id/ai_service_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:padding="8dp" />

                    <ImageButton
                        android:id="@+id/btn_ai_settings"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="AI设置"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/deepseek_icon_tint" />

                    <ImageButton
                        android:id="@+id/btn_clear_ai_response"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="清除回复"
                        android:src="@drawable/ic_close"
                        app:tint="@color/deepseek_icon_tint" />

                </LinearLayout>

                <!-- AI 输入区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/ai_input_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/ai_input_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="输入问题或指令..."
                        android:textColor="@color/deepseek_text_color"
                        android:textColorHint="@color/deepseek_icon_tint"
                        android:textSize="12sp"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="3"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true" />

                    <ImageButton
                        android:id="@+id/btn_send_ai_message"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="发送"
                        android:src="@drawable/ic_send_plane"
                        app:tint="@color/deepseek_icon_tint" />

                </LinearLayout>

                <!-- AI 回复区域 -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="none">

                    <TextView
                        android:id="@+id/ai_response_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="选择AI服务并输入问题获取回复..."
                        android:textColor="@color/deepseek_text_color"
                        android:textSize="11sp"
                        android:lineSpacingExtra="2dp" />

                </ScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_select_assistant"
                style="@style/DynamicIslandConfigButton"
                android:text="助手"
                app:icon="@drawable/ic_assistant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_generate_prompt"
                style="@style/DynamicIslandConfigButton"
                android:text="身份"
                app:icon="@drawable/ic_edit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_settings"
                style="@style/DynamicIslandSettingsButton"
                android:text="设置"
                app:icon="@drawable/ic_settings" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_master_prompt"
                style="@style/DynamicIslandConfigButton"
                android:text="提示词"
                android:visibility="gone"
                app:icon="@drawable/ic_magic_wand" />

        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView> 