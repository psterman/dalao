<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/simple_mode_text_primary_light"
        app:iconGravity="top"
        app:iconSize="32dp"
        app:iconPadding="8dp"
        app:iconTint="@color/simple_mode_text_primary_light"
        app:cornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/simple_mode_text_secondary_light"
        app:backgroundTint="@android:color/transparent"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <!-- 选中指示器 -->
    <View
        android:id="@+id/selected_indicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="bottom"
        android:background="@color/simple_mode_accent_light"
        android:visibility="gone" />

    <!-- 拖动指示器 -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="4dp"
        android:background="@android:color/darker_gray"
        android:alpha="0.3"
        android:visibility="gone" />

</FrameLayout>

