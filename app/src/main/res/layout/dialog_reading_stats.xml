<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="阅读统计"
        android:textSize="20sp"
        android:textColor="#1C1C1E"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 统计卡片容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <!-- 今日阅读时间 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#F2F2F7"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statsTodayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12分"
                android:textSize="24sp"
                android:textColor="#007AFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日阅读"
                android:textSize="12sp"
                android:textColor="#8E8E93"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- 总阅读时间 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#F2F2F7"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statsTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5小时"
                android:textSize="24sp"
                android:textColor="#34C759"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计阅读"
                android:textSize="12sp"
                android:textColor="#8E8E93"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

    <!-- 阅读进度 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F2F2F7"
        android:padding="16dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="阅读进度"
                android:textSize="14sp"
                android:textColor="#1C1C1E"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/statsProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45%"
                android:textSize="18sp"
                android:textColor="#007AFF"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/statsProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="45"
            android:progressTint="#007AFF"
            android:progressBackgroundTint="#E5E5EA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/statsCurrentPage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="第 45 页"
                android:textSize="12sp"
                android:textColor="#8E8E93"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/statsTotalPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共 100 页"
                android:textSize="12sp"
                android:textColor="#8E8E93"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

    <!-- 阅读速度 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <!-- 平均速度 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#F2F2F7"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statsReadingSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350字/分"
                android:textSize="18sp"
                android:textColor="#FF9500"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读速度"
                android:textSize="12sp"
                android:textColor="#8E8E93"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- 剩余时间 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#F2F2F7"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statsRemainingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约25分钟"
                android:textSize="18sp"
                android:textColor="#FF3B30"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计剩余"
                android:textSize="12sp"
                android:textColor="#8E8E93"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

    <!-- 关闭按钮 -->
    <Button
        android:id="@+id/statsCloseButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="关闭"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/button_primary"
        android:elevation="0dp" />

</LinearLayout>
