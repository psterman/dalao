<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI参数"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    style="?attr/textAppearanceBodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="推理模式" />

                <EditText
                    android:id="@+id/edit_inference_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="速度优先/平衡/质量优先" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_reasoning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="显示推理过程" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_examples"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="提供示例" />

                <TextView
                    style="?attr/textAppearanceBodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="代码风格" />

                <EditText
                    android:id="@+id/edit_code_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="简洁/清晰/详细" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="温度 (0.0 - 2.0)" />

                <SeekBar
                    android:id="@+id/seek_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200" />

                <TextView
                    android:id="@+id/label_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    tools:text="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Top-P (0.0 - 1.0)" />

                <SeekBar
                    android:id="@+id/seek_top_p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100" />

                <TextView
                    android:id="@+id/label_top_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    tools:text="0.9" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="最大Token数">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_max_tokens"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView> 