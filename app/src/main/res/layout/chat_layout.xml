<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="@color/simple_mode_background_light"
    android:visibility="gone">

    <!-- Material Design搜索框和添加按钮 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/material_chat_surface"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/material_dialog_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Material搜索框 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                app:boxBackgroundColor="@color/material_dialog_input_background"
                app:boxStrokeColor="@color/material_dialog_input_stroke"

                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/material_wechat_primary"
                app:hintTextColor="@color/material_dialog_text_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/chat_search_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="搜索或向所有AI提问..."
                    android:textColor="@color/material_dialog_text_primary"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:imeOptions="actionSearch"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Material添加按钮 -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/chat_add_contact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:fabSize="mini"
                app:backgroundTint="@color/material_wechat_primary"
                app:tint="@color/material_wechat_on_primary"
                app:elevation="2dp"
                android:contentDescription="添加联系人" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Material Design分类标签 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/chat_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tab_layout_background"
        app:tabTextColor="@color/material_dialog_text_secondary"
        app:tabSelectedTextColor="@color/material_wechat_primary"
        app:tabIndicatorColor="@color/material_wechat_primary"
        app:tabIndicatorHeight="3dp"
        app:tabIndicatorFullWidth="false"
        app:tabMode="scrollable"
        app:tabGravity="start"
        app:tabRippleColor="@color/material_dialog_button_ripple"
        app:tabTextAppearance="@style/TabTextAppearance">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI助手" />

    </com.google.android.material.tabs.TabLayout>

    <!-- 联系人列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_contacts_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

</LinearLayout> 