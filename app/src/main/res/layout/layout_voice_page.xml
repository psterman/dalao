<?xml version="1.0" encoding="utf-8"?>
<!-- 语音页面布局 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/voice_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simple_mode_background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 第一段：AI应用图标区域 - 显示用户常用的AI应用 -->
        <LinearLayout
            android:id="@+id/voice_capsule_ai_apps_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="visible">

            <!-- AI应用图标将动态添加到这里 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fadeScrollbars="true">
                
                <LinearLayout
                    android:id="@+id/voice_capsule_ai_apps_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" />
            </HorizontalScrollView>

        </LinearLayout>

        <!-- 第二段：语音输入文本编辑区域 -->
        <!-- 输入框容器 - 使用FrameLayout确保正确的z-order -->
        <FrameLayout
            android:id="@+id/voice_capsule_input_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:background="@drawable/voice_capsule_input_background"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <!-- EditText层 - 最底层 -->
            <EditText
                android:id="@+id/voice_capsule_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="40dp"
                android:paddingBottom="120dp"
                android:minHeight="180dp"
                android:gravity="top|start"
                android:textSize="14sp"
                android:textColor="#000000"
                android:hint="语音识别结果将显示在这里..."
                android:textColorHint="#757575"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine|textNoSuggestions"
                android:imeOptions="actionSearch"
                android:maxLines="15"
                android:minLines="3"
                android:scrollbars="vertical"
                android:overScrollMode="ifContentScrolls"
                android:elevation="1dp" />

            <!-- 转化计时器 - 右上角 -->
            <TextView
                android:id="@+id/voice_capsule_text_conversion_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="00:00"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:background="@android:color/transparent"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false"
                android:elevation="10dp" />
            
            <!-- 波动线动画 - 底部 -->
            <com.example.aifloatingball.ui.WaveformView
                android:id="@+id/voice_capsule_waveform_bottom"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:visibility="gone"
                android:elevation="2dp" />

            <!-- 按钮工具栏 - 底部，所有按钮同一行 -->
            <LinearLayout
                android:id="@+id/voice_capsule_button_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@android:color/transparent"
                android:elevation="20dp">
                
                <!-- 清空按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voice_capsule_clear_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="清空"
                    android:textSize="12sp"
                    android:icon="@drawable/ic_trash"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconTint="@color/simple_mode_primary_light"
                    app:strokeColor="@color/simple_mode_primary_light"
                    app:strokeWidth="1dp"
                    app:cornerRadius="18dp"
                    android:contentDescription="清空文本" />

                <!-- 复制按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voice_capsule_copy_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="复制"
                    android:textSize="12sp"
                    android:icon="@drawable/ic_copy_white"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconTint="@color/simple_mode_primary_light"
                    app:strokeColor="@color/simple_mode_primary_light"
                    app:strokeWidth="1dp"
                    app:cornerRadius="18dp"
                    android:contentDescription="复制文本" />
                
                <!-- 保存按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voice_capsule_save_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="保存"
                    android:textSize="12sp"
                    android:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconTint="@color/simple_mode_primary_light"
                    app:strokeColor="@color/simple_mode_primary_light"
                    app:strokeWidth="1dp"
                    app:cornerRadius="18dp"
                    android:contentDescription="保存文本"
                    android:visibility="gone" />
                
                <!-- 开始/暂停按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voice_capsule_start_pause_btn"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="开始"
                    android:textSize="12sp"
                    android:icon="@drawable/ic_mic"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp"
                    app:iconTint="@color/simple_mode_primary_light"
                    app:strokeColor="@color/simple_mode_primary_light"
                    app:strokeWidth="1dp"
                    app:cornerRadius="18dp"
                    android:contentDescription="开始/暂停语音转文本" />
            </LinearLayout>

        </FrameLayout>

        <!-- 第三段：多标签搜索引擎信息流区域 -->
        <LinearLayout
            android:id="@+id/voice_capsule_browser_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <!-- 标签栏容器（多标签搜索引擎信息流使用） -->
            <FrameLayout
                android:id="@+id/voice_capsule_tab_bar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />

            <!-- 卡片视图容器（搜索结果卡片显示区域） -->
            <FrameLayout
                android:id="@+id/voice_capsule_card_view_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/simple_mode_background_light" />

        </LinearLayout>

        <!-- 原始语音布局 -->
        <LinearLayout
            android:id="@+id/voice_original_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- 顶部标题区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="语音助手"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/simple_mode_text_primary_light"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/voice_hint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击麦克风开始语音输入，或直接编辑文本"
                    android:textSize="16sp"
                    android:textColor="@color/simple_mode_text_secondary_light"
                    android:gravity="center"
                    android:alpha="0.8" />
            </LinearLayout>

            <!-- 麦克风区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp">

                <!-- 麦克风按钮容器（支持iOS动画） -->
                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp">
                    
                    <!-- iOS风格的涟漪效果层 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/voice_mic_ripple"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/simple_mode_accent_light"
                        app:cardCornerRadius="70dp"
                        android:alpha="0.0"
                        android:visibility="gone" />

                    <!-- 麦克风按钮 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/voice_mic_container"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/simple_mode_accent_light"
                        app:cardCornerRadius="70dp"
                        app:cardElevation="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:rippleColor="@android:color/white">

                        <ImageView
                            android:id="@+id/voice_mic_icon"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_mic"
                            app:tint="@android:color/white" />
                            
                        <!-- 录音标识（红色圆点） -->
                        <View
                            android:id="@+id/voice_recording_indicator"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/recording_indicator"
                            android:visibility="gone" />
                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>

                <!-- 状态指示器 -->
                <com.example.aifloatingball.ui.WaveformView
                    android:id="@+id/voice_waveform"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />

                <!-- 状态文本 -->
                <TextView
                    android:id="@+id/voice_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="准备就绪"
                    android:textSize="18sp"
                    android:textColor="@color/simple_mode_text_primary_light"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 文本输入区域 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/simple_mode_card_background_light">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/voice_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="语音识别结果或手动输入"
                    app:boxStrokeColor="@color/simple_mode_accent_light"
                    app:hintTextColor="@color/simple_mode_accent_light"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/voice_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="4"
                        android:maxLines="8"
                        android:gravity="top|start"
                        android:textSize="16sp"
                        android:textColor="@color/simple_mode_input_text_light"
                        android:inputType="textMultiLine|textCapSentences"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 功能选项区域 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/voice_settings_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/simple_mode_card_background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="语音设置"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/simple_mode_text_primary_light"
                        android:layout_marginBottom="16dp" />

                    <!-- 交互模式切换 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/voice_interaction_mode_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_click"
                            app:tint="@color/simple_mode_accent_light"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="交互模式"
                                android:textSize="16sp"
                                android:textColor="@color/simple_mode_text_primary_light" />

                            <TextView
                                android:id="@+id/voice_interaction_mode_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="点击模式：点击开始/停止录音"
                                android:textSize="14sp"
                                android:textColor="@color/simple_mode_text_secondary_light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <!-- 使用Material Design开关替代箭头按钮 -->
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/voice_interaction_mode_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            style="@style/SimpleModeSwitch" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 操作按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voice_clear_button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="清空"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/simple_mode_accent_light"
                    android:textColor="@color/simple_mode_accent_light"
                    app:icon="@drawable/ic_clear"
                    app:iconGravity="textStart" />

                <!-- 暂停/继续按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voice_pause_button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="暂停"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/simple_mode_accent_light"
                    android:textColor="@color/simple_mode_accent_light"
                    android:visibility="gone"
                    app:icon="@drawable/ic_pause"
                    app:iconGravity="textStart" />

                <!-- 保存录音按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voice_save_button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="保存录音"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/simple_mode_accent_light"
                    android:textColor="@color/simple_mode_accent_light"
                    android:visibility="gone"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voice_search_button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="开始搜索"
                    android:textSize="16sp"
                    android:backgroundTint="@color/simple_mode_accent_light"
                    android:textColor="@color/simple_mode_button_text_light"
                    app:icon="@drawable/ic_search"
                    app:iconGravity="textStart" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
