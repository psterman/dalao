<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/simple_mode_background_light">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/simple_mode_header_background_light"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/simple_mode_header_text_light"
            android:contentDescription="返回" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加RSS订阅"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/simple_mode_header_text_light"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_check"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/simple_mode_header_text_light"
            android:contentDescription="保存" />

    </LinearLayout>

    <!-- 搜索框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:boxBackgroundColor="@color/simple_mode_input_background_light"
            app:boxStrokeColor="@color/simple_mode_input_stroke_focused_light"
            app:hintTextColor="@color/simple_mode_input_stroke_focused_light"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="搜索RSS源"
                android:textColor="@color/simple_mode_input_text_light"
                android:textColorHint="@color/simple_mode_input_hint_light"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/simple_mode_accent_light"
            android:contentDescription="搜索" />

    </LinearLayout>

    <!-- 预设RSS源列表 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="热门RSS源"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/simple_mode_text_primary_light"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/preset_rss_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"
        android:clipToPadding="false" />

    <!-- 自定义RSS源 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/simple_mode_surface_light"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义RSS源"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/simple_mode_text_primary_light"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxBackgroundColor="@color/simple_mode_input_background_light"
            app:boxStrokeColor="@color/simple_mode_input_stroke_focused_light"
            app:hintTextColor="@color/simple_mode_input_stroke_focused_light"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/custom_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RSS源名称"
                android:textColor="@color/simple_mode_input_text_light"
                android:textColorHint="@color/simple_mode_input_hint_light"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxBackgroundColor="@color/simple_mode_input_background_light"
            app:boxStrokeColor="@color/simple_mode_input_stroke_focused_light"
            app:hintTextColor="@color/simple_mode_input_stroke_focused_light"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/custom_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="描述（可选）"
                android:textColor="@color/simple_mode_input_text_light"
                android:textColorHint="@color/simple_mode_input_hint_light"
                android:inputType="textMultiLine"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/simple_mode_input_background_light"
            app:boxStrokeColor="@color/simple_mode_input_stroke_focused_light"
            app:hintTextColor="@color/simple_mode_input_stroke_focused_light"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/custom_rss_url_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RSS源地址"
                android:textColor="@color/simple_mode_input_text_light"
                android:textColorHint="@color/simple_mode_input_hint_light"
                android:inputType="textUri"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加自定义RSS源"
            android:textColor="@color/simple_mode_button_text_light"
            android:backgroundTint="@color/simple_mode_button_primary_light"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout> 