<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/island_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dynamic_island_height"
        android:minWidth="@dimen/dynamic_island_min_width"
        android:maxWidth="@dimen/dynamic_island_max_width"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="@dimen/dynamic_island_corner_radius"
        app:cardElevation="4dp">

        <!-- 紧凑状态：显示按钮区域 -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
                    android:paddingStart="8dp"
        android:paddingEnd="8dp"
            android:visibility="visible">

            <!-- 第一个按钮：AI助手 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ai_assistant"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/dynamic_island_button_background"
                android:contentDescription="AI助手"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_ai_assistant"
                app:icon="@drawable/ic_ai_assistant"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="14dp"
                app:iconTint="@color/dynamic_island_button_icon" />

            <!-- 第二个按钮：应用程序 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_apps"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/dynamic_island_button_background"
                android:contentDescription="应用程序"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_apps"
                app:icon="@drawable/ic_apps"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="14dp"
                app:iconTint="@color/dynamic_island_button_icon" />

            <!-- 第三个按钮：搜索 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_search"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/dynamic_island_button_background"
                android:contentDescription="搜索"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_search"
                app:icon="@drawable/ic_search"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="14dp"
                app:iconTint="@color/dynamic_island_button_icon" />

            <!-- 第四个按钮：设置 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_settings"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/dynamic_island_button_background"
                android:contentDescription="设置"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_settings"
                app:icon="@drawable/ic_settings"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="14dp"
                app:iconTint="@color/dynamic_island_button_icon" />

            <!-- 第五个按钮：退出关闭 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_exit"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/dynamic_island_button_background"
                android:contentDescription="退出"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_close"
                app:icon="@drawable/ic_close"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="14dp"
                app:iconTint="@color/dynamic_island_button_icon" />

        </LinearLayout>

        <!-- Container for notification icons (compact state) -->
        <LinearLayout
            android:id="@+id/notification_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="@dimen/dynamic_island_icon_size"
                android:layout_height="@dimen/dynamic_island_icon_size"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/notification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dynamic_island_text_size" />
        </LinearLayout>

        <!-- Container for app search icons (expanded state) -->
        <HorizontalScrollView
            android:id="@+id/app_search_icon_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/app_search_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </HorizontalScrollView>

        <!-- Container for "Copied" toast -->
        <LinearLayout
            android:id="@+id/copy_toast_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/copy_toast_icon"
                android:layout_width="@dimen/dynamic_island_icon_size"
                android:layout_height="@dimen/dynamic_island_icon_size"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_check" />

            <TextView
                android:id="@+id/copy_toast_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已复制"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dynamic_island_text_size" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout> 