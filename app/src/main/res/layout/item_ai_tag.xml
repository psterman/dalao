<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 标签颜色指示器 -->
        <View
            android:id="@+id/tag_color_indicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_background" />

        <!-- 标签信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签名称"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/chat_contact_name_text_light"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tag_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="标签描述"
                android:textSize="14sp"
                android:textColor="@color/chat_contact_description_text_light"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/edit_tag_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/chat_contact_description_text_light" />

            <ImageView
                android:id="@+id/delete_tag_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/chat_contact_description_text_light" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
