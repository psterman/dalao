<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔥 后台剪贴板监听突破测试"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#d32f2f"
        android:gravity="center"
        android:padding="12dp"
        android:background="#ffffff"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <!-- 状态显示区域 -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在加载状态..."
        android:textSize="14sp"
        android:textColor="#333333"
        android:background="#ffffff"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="monospace"
        android:elevation="1dp" />

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="1dp">

        <!-- 第一行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnStartTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🚀 开始后台测试"
                android:textSize="12sp"
                android:backgroundTint="#4caf50"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnStopTest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🛑 停止测试"
                android:textSize="12sp"
                android:backgroundTint="#f44336"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- 第二行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnOpenWechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📱 打开微信"
                android:textSize="12sp"
                android:backgroundTint="#2196f3"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnOpenBrowser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🌐 打开浏览器"
                android:textSize="12sp"
                android:backgroundTint="#2196f3"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- 第三行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSimulateCopy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✋ 模拟复制"
                android:textSize="12sp"
                android:backgroundTint="#ff9800"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnCheckServices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔍 检查服务"
                android:textSize="12sp"
                android:backgroundTint="#9c27b0"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- 第四行按钮 -->
        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗑️ 清空日志"
            android:textSize="12sp"
            android:backgroundTint="#607d8b"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- 日志显示区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📝 测试日志"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:elevation="1dp">

        <TextView
            android:id="@+id/logText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待测试开始...\n"
            android:textSize="12sp"
            android:textColor="#333333"
            android:padding="12dp"
            android:fontFamily="monospace"
            android:textIsSelectable="true" />

    </ScrollView>

    <!-- 底部说明 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 此工具专门测试应用在后台时的剪贴板监听能力，突破系统限制"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="#e8f5e8" />

</LinearLayout>
