<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 顶部信息栏（iOS风格） -->
    <LinearLayout
        android:id="@+id/topInfoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        android:visibility="gone"
        android:layout_gravity="top">

        <!-- 顶部操作栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="书名"
                android:textSize="17sp"
                android:textColor="#1C1C1E"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageButton
                android:id="@+id/btnExit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="退出"
                android:tint="#8E8E93"
                android:scaleType="centerInside"
                android:padding="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="作者"
            android:textSize="13sp"
            android:textColor="#8E8E93"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 章节名称 -->
        <TextView
            android:id="@+id/chapterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="第1章"
            android:textSize="12sp"
            android:textColor="#C7C7CC"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 内容区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <!-- WebView -->
        <WebView
            android:id="@+id/fileReaderWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 进度条 -->
        <ProgressBar
            android:id="@+id/fileReaderProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:progressDrawable="@drawable/progress_bar_drawable"
            android:visibility="visible" />

        <!-- 错误提示 -->
        <TextView
            android:id="@+id/fileReaderError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp"
            android:text="加载文件失败"
            android:textSize="16sp"
            android:textColor="#666666"
            android:visibility="gone" />

    </FrameLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        app:layout_anchorGravity="bottom">

        <!-- 上一页 -->
        <ImageButton
            android:id="@+id/btnPrevPage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="上一页"
            app:tint="#333333" />

        <!-- 目录 -->
        <ImageButton
            android:id="@+id/btnCatalog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_menu"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="目录"
            app:tint="#333333" />

        <!-- 页码显示 -->
        <TextView
            android:id="@+id/pageInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="1/100"
            android:textSize="14sp"
            android:textColor="#666666" />

        <!-- 书签 -->
        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_bookmark_border"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="书签"
            app:tint="#333333" />

        <!-- 下一页 -->
        <ImageButton
            android:id="@+id/btnNextPage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="下一页"
            app:tint="#333333" />

    </LinearLayout>

    <!-- 底部菜单容器 -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="16dp"
        android:background="?attr/colorSurface"
        android:elevation="10dp"
        android:layout_gravity="bottom">

        <!-- 功能菜单（iOS风格，精简版 + 统计） -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/functionMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- 阅读进度条 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/readingProgressText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="阅读进度"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/readingProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="13sp"
                            android:textColor="#007AFF"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- 进度条 -->
                    <SeekBar
                        android:id="@+id/readingProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="#007AFF"
                        android:thumbTint="#007AFF"
                        android:progressBackgroundTint="#E5E5EA" />

                </LinearLayout>

                <!-- 分隔线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E5E5EA" />

                <!-- 功能按钮行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- 目录 -->
                    <LinearLayout
                        android:id="@+id/menuCatalog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_menu"
                            android:contentDescription="目录"
                            app:tint="#1C1C1E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="目录"
                            android:textSize="12sp"
                            android:textColor="#1C1C1E"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- 统计 -->
                    <LinearLayout
                        android:id="@+id/menuStats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_chart"
                            android:contentDescription="统计"
                            app:tint="#FF9500" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="统计"
                            android:textSize="12sp"
                            android:textColor="#FF9500"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- 设置 -->
                    <LinearLayout
                        android:id="@+id/menuSettings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_settings"
                            android:contentDescription="设置"
                            app:tint="#1C1C1E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="设置"
                            android:textSize="12sp"
                            android:textColor="#1C1C1E"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- 听书 -->
                    <LinearLayout
                        android:id="@+id/menuTTS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ttsIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_volume_on"
                            android:contentDescription="听书"
                            app:tint="#007AFF" />

                        <TextView
                            android:id="@+id/ttsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="听书"
                            android:textSize="12sp"
                            android:textColor="#007AFF"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- 自动翻页 -->
                    <LinearLayout
                        android:id="@+id/menuAutoRead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/autoReadIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_play"
                            android:contentDescription="自动翻页"
                            app:tint="#34C759" />

                        <TextView
                            android:id="@+id/autoReadText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="自动"
                            android:textSize="12sp"
                            android:textColor="#34C759"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
