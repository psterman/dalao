<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 顶部信息栏（文件名等） -->
    <LinearLayout
        android:id="@+id/topInfoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="2dp"
        android:visibility="gone"
        android:layout_gravity="top">

        <!-- 顶部操作栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="书名"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageButton
                android:id="@+id/btnExit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="退出"
                android:tint="#666666" />

        </LinearLayout>

        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="作者"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 章节名称 -->
        <TextView
            android:id="@+id/chapterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="第1章"
            android:textSize="14sp"
            android:textColor="#999999"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 内容区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <!-- WebView -->
        <WebView
            android:id="@+id/fileReaderWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 进度条 -->
        <ProgressBar
            android:id="@+id/fileReaderProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:progressDrawable="@drawable/progress_bar_drawable"
            android:visibility="visible" />

        <!-- 错误提示 -->
        <TextView
            android:id="@+id/fileReaderError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp"
            android:text="加载文件失败"
            android:textSize="16sp"
            android:textColor="#666666"
            android:visibility="gone" />

    </FrameLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        app:layout_anchorGravity="bottom">

        <!-- 上一页 -->
        <ImageButton
            android:id="@+id/btnPrevPage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="上一页"
            app:tint="#333333" />

        <!-- 目录 -->
        <ImageButton
            android:id="@+id/btnCatalog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_menu"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="目录"
            app:tint="#333333" />

        <!-- 页码显示 -->
        <TextView
            android:id="@+id/pageInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="1/100"
            android:textSize="14sp"
            android:textColor="#666666" />

        <!-- 书签 -->
        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_bookmark_border"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="书签"
            app:tint="#333333" />

        <!-- 下一页 -->
        <ImageButton
            android:id="@+id/btnNextPage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="下一页"
            app:tint="#333333" />

    </LinearLayout>

    <!-- 底部菜单容器 -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="16dp"
        android:background="?attr/colorSurface"
        android:elevation="10dp"
        android:layout_gravity="bottom">

        <!-- 功能菜单（iOS风格，底部弹出） -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/functionMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/colorSurface"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- 第一行按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- 目录 -->
                    <LinearLayout
                        android:id="@+id/menuCatalog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="56dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_menu"
                            android:contentDescription="目录"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="目录"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                    <!-- 书签 -->
                    <LinearLayout
                        android:id="@+id/menuBookmark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/bookmarkMenuIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_bookmark_border"
                            android:contentDescription="书签"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="书签"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                    <!-- 划线 -->
                    <LinearLayout
                        android:id="@+id/menuHighlight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="56dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_edit"
                            android:contentDescription="划线"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="划线"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                    <!-- 笔记 -->
                    <LinearLayout
                        android:id="@+id/menuNote"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="56dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_comment"
                            android:contentDescription="笔记"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="笔记"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 分隔线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#E0E0E0" />

                <!-- 第二行：设置、听书、自动翻页、分享 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- 设置 -->
                    <LinearLayout
                        android:id="@+id/menuSettings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="56dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_settings"
                            android:contentDescription="设置"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="设置"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                    <!-- 听书 -->
                    <LinearLayout
                        android:id="@+id/menuTTS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/ttsIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_volume_on"
                            android:contentDescription="听书"
                            app:tint="#2196F3" />

                        <TextView
                            android:id="@+id/ttsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="听书"
                            android:textSize="11sp"
                            android:textColor="#2196F3" />

                    </LinearLayout>

                    <!-- 自动阅读 -->
                    <LinearLayout
                        android:id="@+id/menuAutoRead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/autoReadIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_play"
                            android:contentDescription="自动翻页"
                            app:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/autoReadText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="自动"
                            android:textSize="11sp"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <!-- 分享 -->
                    <LinearLayout
                        android:id="@+id/menuShare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:minHeight="56dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_share"
                            android:contentDescription="分享"
                            app:tint="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="分享"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
