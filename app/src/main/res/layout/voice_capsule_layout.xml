<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/simple_mode_background_light">


    <!-- 第一段：AI应用图标区域 - 显示用户常用的AI应用 -->
    <LinearLayout
        android:id="@+id/voice_capsule_ai_apps_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/simple_mode_card_background_light"
        android:padding="12dp"
        android:visibility="visible">

        <!-- AI应用图标将动态添加到这里 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:fadeScrollbars="true">
            
            <LinearLayout
                android:id="@+id/voice_capsule_ai_apps_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" />
        </HorizontalScrollView>

    </LinearLayout>

    <!-- 第二段：语音输入文本编辑区域 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/voice_capsule_input_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="0"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部绿色分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/voice_capsule_gradient_background" />

            <!-- 文本输入区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="220dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white">

                <!-- 输入框容器 - 使用FrameLayout确保正确的z-order -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:background="@drawable/voice_capsule_input_background"
                    android:padding="8dp">

                    <!-- EditText层 - 最底层 -->
                    <EditText
                        android:id="@+id/voice_capsule_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="40dp"
                        android:paddingBottom="120dp"
                        android:minHeight="180dp"
                        android:gravity="top|start"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:hint="语音识别结果将显示在这里..."
                        android:textColorHint="#757575"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:maxLines="15"
                        android:minLines="3"
                        android:scrollbars="vertical"
                        android:overScrollMode="ifContentScrolls"
                        android:elevation="1dp" />

                    <!-- 转化计时器 - 右上角 -->
                    <TextView
                        android:id="@+id/voice_capsule_text_conversion_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:text="00:00"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:background="@android:color/transparent"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:visibility="gone"
                        android:clickable="false"
                        android:focusable="false"
                        android:elevation="10dp" />
                    
                    <!-- 波动线动画 - 底部 -->
                    <com.example.aifloatingball.ui.WaveformView
                        android:id="@+id/voice_capsule_waveform_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:visibility="gone"
                        android:elevation="2dp" />

                    <!-- 按钮工具栏 - 底部，所有按钮同一行 -->
                    <LinearLayout
                        android:id="@+id/voice_capsule_button_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|end"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@android:color/transparent"
                        android:elevation="20dp">
                        
                        <!-- 清空按钮 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/voice_capsule_clear_btn"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="4dp"
                            android:minWidth="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="清空"
                            android:textSize="12sp"
                            android:icon="@drawable/ic_trash"
                            app:iconGravity="textStart"
                            app:iconPadding="4dp"
                            app:iconTint="@color/simple_mode_primary_light"
                            app:strokeColor="@color/simple_mode_primary_light"
                            app:strokeWidth="1dp"
                            app:cornerRadius="18dp"
                            android:contentDescription="清空文本" />

                        <!-- 复制按钮 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/voice_capsule_copy_btn"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="4dp"
                            android:minWidth="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="复制"
                            android:textSize="12sp"
                            android:icon="@drawable/ic_copy_white"
                            app:iconGravity="textStart"
                            app:iconPadding="4dp"
                            app:iconTint="@color/simple_mode_primary_light"
                            app:strokeColor="@color/simple_mode_primary_light"
                            app:strokeWidth="1dp"
                            app:cornerRadius="18dp"
                            android:contentDescription="复制文本" />
                        
                        <!-- 保存按钮 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/voice_capsule_save_btn"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="8dp"
                            android:minWidth="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="保存"
                            android:textSize="12sp"
                            android:icon="@drawable/ic_save"
                            app:iconGravity="textStart"
                            app:iconPadding="4dp"
                            app:iconTint="@color/simple_mode_primary_light"
                            app:strokeColor="@color/simple_mode_primary_light"
                            app:strokeWidth="1dp"
                            app:cornerRadius="18dp"
                            android:contentDescription="保存文本"
                            android:visibility="gone" />
                        
                        <!-- 开始/暂停按钮 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/voice_capsule_start_pause_btn"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="8dp"
                            android:minWidth="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="开始"
                            android:textSize="12sp"
                            android:icon="@drawable/ic_mic"
                            app:iconGravity="textStart"
                            app:iconPadding="4dp"
                            app:iconTint="@color/simple_mode_primary_light"
                            app:strokeColor="@color/simple_mode_primary_light"
                            app:strokeWidth="1dp"
                            app:cornerRadius="18dp"
                            android:contentDescription="开始/暂停语音转文本" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>



            <!-- 底部绿色分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/voice_capsule_gradient_background" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- 第三段：双窗口浮动WebView服务区域 -->
    <LinearLayout
        android:id="@+id/voice_capsule_browser_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:background="@color/simple_mode_card_background_light">

        <!-- 双窗口浮动WebView服务容器 -->
            <LinearLayout
            android:id="@+id/voice_capsule_dual_webview_container"
                android:layout_width="match_parent"
            android:layout_height="0dp"
                android:layout_weight="1"
            android:orientation="vertical"
                android:background="@color/simple_mode_background_light">

            <!-- 这里将动态加载DualFloatingWebViewService的布局 -->
            <FrameLayout
                android:id="@+id/voice_capsule_webview_content"
                    android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp">
                
                <include layout="@layout/layout_voice_capsule_dual_webview" />

            </FrameLayout>

            <!-- 底部高度调整把手 -->
    <LinearLayout
                android:id="@+id/voice_capsule_resize_handle"
        android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@drawable/voice_capsule_resize_handle_background"
                android:clickable="true"
                android:focusable="true"
            android:orientation="horizontal"
            android:gravity="center"
                android:paddingVertical="4dp">
                
                <!-- 拖拽指示器（三个小点） -->
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/voice_capsule_drag_dot" />
                
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/voice_capsule_drag_dot" />
                
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/voice_capsule_drag_dot" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>