<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/simple_mode_background_light">


    <!-- 第一段：平台图标区域 - 参考对话tab中AI回复下方的图标 -->
    <LinearLayout
        android:id="@+id/voice_capsule_platform_icons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/simple_mode_card_background_light"
        android:padding="12dp"
        android:visibility="gone">

        <!-- 平台图标将动态添加到这里 -->
        <com.example.aifloatingball.ui.PlatformIconsView
            android:id="@+id/voice_capsule_platform_icons_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- 第二段：语音输入文本编辑区域 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/voice_capsule_input_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="0"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部绿色分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/voice_capsule_gradient_background" />

            <!-- 文本输入区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white">

                <!-- 输入框容器 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/voice_capsule_input_background"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/voice_capsule_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="40dp"
                        android:gravity="top|start"
                        android:textSize="14sp"
                        android:textColor="@color/simple_mode_text_primary_light"
                        android:hint="语音识别结果将显示在这里..."
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:scrollbars="vertical"
                        android:overScrollMode="ifContentScrolls" />

                    <!-- 麦克风按钮 - 放在输入框右下角，支持左右手模式 -->
                    <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="4dp"
                        android:elevation="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <!-- 录音波形动画（在麦克风按钮内部） -->
                        <com.example.aifloatingball.ui.WaveformView
                            android:id="@+id/voice_capsule_waveform"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                        <!-- 麦克风按钮 -->
                    <ImageView
                            android:id="@+id/voice_capsule_floating_mic"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_mic"
                            android:background="@drawable/voice_capsule_app_icon_background"
                        android:clickable="true"
                        android:focusable="true"
                            android:padding="12dp"
                            android:elevation="4dp" />

                        <!-- 暂停按钮（录音停止时显示） -->
                    <ImageView
                            android:id="@+id/voice_capsule_pause_btn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_pause"
                            android:background="@drawable/voice_capsule_red_button_background"
                        android:clickable="true"
                        android:focusable="true"
                            android:padding="12dp"
                            android:visibility="gone"
                            android:elevation="4dp" />

                    </RelativeLayout>

                    <!-- 文本工具按钮区域 - 放入输入框内 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="4dp"
                        android:background="@android:color/white">

                        <!-- 清空按钮 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/voice_capsule_clear_btn"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_trash"
                                android:background="@drawable/voice_capsule_button_background"
                                android:padding="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="清空"
                                android:textSize="10sp"
                                android:textColor="@color/simple_mode_text_secondary_light"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- 复制按钮 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/voice_capsule_copy_btn"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_copy_white"
                                android:background="@drawable/voice_capsule_button_background"
                                android:padding="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="复制"
                                android:textSize="10sp"
                                android:textColor="@color/simple_mode_text_secondary_light"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- 粘贴按钮 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/voice_capsule_paste_btn"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_paste_white"
                                android:background="@drawable/voice_capsule_button_background"
                                android:padding="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="粘贴"
                                android:textSize="10sp"
                                android:textColor="@color/simple_mode_text_secondary_light"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- 分享按钮 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:id="@+id/voice_capsule_share_btn"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_share"
                                android:background="@drawable/voice_capsule_button_background"
                                android:padding="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分享"
                                android:textSize="10sp"
                                android:textColor="@color/simple_mode_text_secondary_light"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>



            <!-- 底部绿色分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/voice_capsule_gradient_background" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- 第三段：双窗口浮动WebView服务区域 -->
    <LinearLayout
        android:id="@+id/voice_capsule_browser_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:background="@color/simple_mode_card_background_light">

        <!-- 双窗口浮动WebView服务容器 -->
            <LinearLayout
            android:id="@+id/voice_capsule_dual_webview_container"
                android:layout_width="match_parent"
            android:layout_height="0dp"
                android:layout_weight="1"
            android:orientation="vertical"
                android:background="@color/simple_mode_background_light">

            <!-- 这里将动态加载DualFloatingWebViewService的布局 -->
            <FrameLayout
                android:id="@+id/voice_capsule_webview_content"
                    android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp">
                
                <include layout="@layout/layout_voice_capsule_dual_webview" />

            </FrameLayout>

            <!-- 底部高度调整把手 -->
    <LinearLayout
                android:id="@+id/voice_capsule_resize_handle"
        android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@drawable/voice_capsule_resize_handle_background"
                android:clickable="true"
                android:focusable="true"
            android:orientation="horizontal"
            android:gravity="center"
                android:paddingVertical="4dp">
                
                <!-- 拖拽指示器（三个小点） -->
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/voice_capsule_drag_dot" />
                
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/voice_capsule_drag_dot" />
                
                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/voice_capsule_drag_dot" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>