<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ai_assistant_center_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 基本信息 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/ai_assistant_text_primary"
            android:layout_marginBottom="8dp"/>

        <!-- 性别 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/gender_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="性别">

            <AutoCompleteTextView
                android:id="@+id/gender_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 出生年代 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/age_group_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="出生年代">

            <AutoCompleteTextView
                android:id="@+id/age_group_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 职业信息 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="职业信息"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/ai_assistant_text_primary"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

        <!-- 当前职业 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/occupation_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="当前职业">

            <AutoCompleteTextView
                android:id="@+id/occupation_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 感兴趣的职业方向 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/occupation_interest_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="感兴趣的职业方向">

            <AutoCompleteTextView
                android:id="@+id/occupation_interest_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 教育程度 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/education_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="教育程度">

            <AutoCompleteTextView
                android:id="@+id/education_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 兴趣与偏好 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="兴趣与偏好"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/ai_assistant_text_primary"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

        <!-- 日常娱乐 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/entertainment_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="日常娱乐">

            <AutoCompleteTextView
                android:id="@+id/entertainment_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 购物喜好 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/shopping_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="购物喜好">

            <AutoCompleteTextView
                android:id="@+id/shopping_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 小众爱好 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/niche_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="小众爱好">

            <AutoCompleteTextView
                android:id="@+id/niche_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 观念与取向 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="观念与取向"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/ai_assistant_text_primary"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

        <!-- 性取向 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/orientation_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="性取向">

            <AutoCompleteTextView
                android:id="@+id/orientation_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 三观倾向 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/values_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="三观倾向">

            <AutoCompleteTextView
                android:id="@+id/values_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 健康信息 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="健康信息"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/ai_assistant_text_primary"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

        <!-- 确诊疾病 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/diagnosed_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="确诊疾病">

            <AutoCompleteTextView
                android:id="@+id/diagnosed_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 饮食偏好与禁忌 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dietary_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="饮食偏好与禁忌">

            <AutoCompleteTextView
                android:id="@+id/dietary_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- 睡眠模式 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sleep_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="睡眠模式">

            <AutoCompleteTextView
                android:id="@+id/sleep_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView> 