<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ai_overlay_background"
    android:padding="12dp"
    android:elevation="8dp">

    <!-- 应用名称 -->
    <TextView
        android:id="@+id/overlay_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI应用"
        android:textColor="#FF000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- 剪贴板预览区域 - 暂时隐藏 -->
    <LinearLayout
        android:id="@+id/clipboard_preview_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/clipboard_preview_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <!-- 剪贴板标题 -->
        <TextView
            android:id="@+id/clipboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剪贴板内容"
            android:textColor="#FF666666"
            android:textSize="10sp"
            android:layout_marginBottom="4dp" />

        <!-- 剪贴板内容预览 -->
        <TextView
            android:id="@+id/clipboard_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无内容"
            android:textColor="#FF000000"
            android:textSize="11sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp" />

        <!-- 剪贴板操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- 粘贴按钮 -->
            <Button
                android:id="@+id/clipboard_copy_button"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="粘贴"
                android:textSize="9sp"
                android:textColor="#FF000000"
                android:background="@drawable/clipboard_button_background"
                android:layout_marginEnd="2dp" />

            <!-- 历史按钮 -->
            <Button
                android:id="@+id/clipboard_clear_button"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:text="历史"
                android:textSize="9sp"
                android:textColor="#FF000000"
                android:background="@drawable/clipboard_button_background"
                android:layout_marginStart="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 按钮容器 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 返回按钮 -->
        <Button
            android:id="@+id/overlay_back_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="返回"
            android:textSize="12sp"
            android:textColor="#FF000000"
            android:background="@drawable/ai_overlay_button_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="4dp"
            android:minWidth="60dp" />

        <!-- AI按钮 -->
        <Button
            android:id="@+id/overlay_ai_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="AI"
            android:textSize="12sp"
            android:textColor="#FF000000"
            android:background="@drawable/ai_overlay_button_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:minWidth="60dp" />

        <!-- 关闭按钮 -->
        <Button
            android:id="@+id/overlay_close_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="关闭"
            android:textSize="12sp"
            android:textColor="#FF000000"
            android:background="@drawable/ai_overlay_button_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="4dp"
            android:minWidth="60dp" />

    </LinearLayout>

</LinearLayout>
