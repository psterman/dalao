<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ai_overlay_background"
    android:padding="12dp"
    android:elevation="8dp">

    <!-- 应用名称 -->
    <TextView
        android:id="@+id/overlay_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI应用"
        android:textColor="#FF000000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <!-- 按钮容器 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 返回按钮 -->
        <Button
            android:id="@+id/overlay_back_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="返回"
            android:textSize="12sp"
            android:textColor="#FF000000"
            android:background="@drawable/ai_overlay_button_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="4dp"
            android:minWidth="60dp" />

        <!-- AI按钮 -->
        <Button
            android:id="@+id/overlay_ai_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="AI"
            android:textSize="12sp"
            android:textColor="#FF000000"
            android:background="@drawable/ai_overlay_button_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:minWidth="60dp" />

        <!-- 关闭按钮 -->
        <Button
            android:id="@+id/overlay_close_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="关闭"
            android:textSize="12sp"
            android:textColor="#FF000000"
            android:background="@drawable/ai_overlay_button_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="4dp"
            android:minWidth="60dp" />

    </LinearLayout>

</LinearLayout>
