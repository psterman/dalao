<?xml version="1.0" encoding="utf-8"?>
<!--
  增强版页面刷新菜单 - 搜索tab中页面长按弹出菜单
  提供完整的页面操作功能，包括刷新、导航、工具等
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- 菜单内容容器 -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxWidth="400dp"
        android:maxHeight="600dp"
        android:scrollbars="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/enhanced_refresh_menu_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/enhanced_menu_background"
            android:padding="12dp"
            android:minWidth="280dp"
            android:maxWidth="400dp"
            android:elevation="12dp">

            <!-- 页面信息区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/page_info_background"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/page_favicon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/page_favicon_placeholder"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/page_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="页面"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/page_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击查看详情"
                        android:textSize="12sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

            <!-- 主要操作区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 刷新操作 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_refresh_page"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="刷新页面"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_refresh"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_force_refresh"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="强制刷新"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_refresh"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 导航操作 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_go_back"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="后退"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_arrow_back"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_go_forward"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="前进"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 页面操作 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_go_home"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="回到首页"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_home"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_reload_page"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="重新加载"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_reload"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 复制和分享 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_copy_url"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="复制链接"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_copy"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_share_page"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="分享页面"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_share"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 页面工具 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_page_info"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="页面信息"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_info"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_view_source"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="查看源码"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_code"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 高级功能 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_save_page"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="保存页面"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_save"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_print_page"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="打印页面"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_print"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 设置和工具 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_page_settings"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="页面设置"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_settings"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_clear_cache"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="清除缓存"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_clear"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 广告屏蔽 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/action_block_ads"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="屏蔽页面广告"
                    android:textSize="14sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:icon="@drawable/ic_block_ads"
                    app:iconGravity="start" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
