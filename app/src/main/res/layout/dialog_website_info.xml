<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:padding="0dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 网站信息部分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?attr/colorSurface">

            <!-- URL -->
            <TextView
                android:id="@+id/website_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:paddingBottom="8dp" />

            <!-- 网站名称 -->
            <TextView
                android:id="@+id/website_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <!-- 证书信息 -->
            <LinearLayout
                android:id="@+id/certificate_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Issued to -->
                <TextView
                    android:id="@+id/cert_issued_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="monospace"
                    android:paddingBottom="4dp" />

                <!-- Issued by -->
                <TextView
                    android:id="@+id/cert_issued_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="monospace"
                    android:paddingBottom="4dp" />

                <!-- Expires on -->
                <TextView
                    android:id="@+id/cert_expires_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutline" />

        <!-- 菜单选项部分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorSurface">

            <!-- 拷贝标题 -->
            <LinearLayout
                android:id="@+id/menu_copy_title"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="拷贝标题"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.6" />

            </LinearLayout>

            <!-- 网站设置 -->
            <LinearLayout
                android:id="@+id/menu_website_settings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="网站设置"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.6" />

            </LinearLayout>

            <!-- 页面缩放 -->
            <LinearLayout
                android:id="@+id/menu_page_zoom"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/zoom_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="页面缩放:100%"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/zoom_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/badge_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textStyle="bold"
                    android:minWidth="40dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- 主动扩展 -->
            <LinearLayout
                android:id="@+id/menu_active_extensions"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="主动扩展"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_manage"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.6" />

            </LinearLayout>

            <!-- 添加到桌面 -->
            <LinearLayout
                android:id="@+id/menu_add_to_desktop"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="添加到桌面"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_add"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.6" />

            </LinearLayout>

            <!-- 获取网页全部文字 -->
            <LinearLayout
                android:id="@+id/menu_get_full_text"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="获取网页全部文字"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.6" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

