<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 标题 -->
        <TextView
            android:id="@+id/help_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="如何添加AI搜索小组件"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_color"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 插图 -->
        <ImageView
            android:id="@+id/help_illustration"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_generic_widget_guide"
            android:scaleType="centerInside"
            android:layout_marginBottom="24dp" />

        <!-- 说明文字 -->
        <TextView
            android:id="@+id/help_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加小组件的详细步骤..."
            android:textSize="14sp"
            android:textColor="@color/widget_text_color"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- 功能说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小组件功能说明："
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_color"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/widget_button_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ai_chat"
                    android:tint="@color/widget_ai_color"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AI对话 - 快速启动AI聊天功能"
                    android:textSize="14sp"
                    android:textColor="@color/widget_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_app_search"
                    android:tint="@color/widget_app_color"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="应用搜索 - 快速查找已安装的应用"
                    android:textSize="14sp"
                    android:textColor="@color/widget_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_web_search"
                    android:tint="@color/widget_web_color"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="网络搜索 - 快速启动网络搜索引擎"
                    android:textSize="14sp"
                    android:textColor="@color/widget_text_color" />
            </LinearLayout>
        </LinearLayout>

        <!-- 设备信息 -->
        <TextView
            android:id="@+id/help_device_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备信息..."
            android:textSize="12sp"
            android:textColor="@color/widget_hint_color"
            android:layout_marginBottom="24dp" />

        <!-- 按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/help_open_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="打开设置"
                android:textColor="@android:color/white"
                android:background="@drawable/widget_confirm_button_background"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/help_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭"
                android:textColor="@color/widget_hint_color"
                android:background="@drawable/widget_button_background"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
