<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 语音速度调节 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tts_speed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音速度: 1.0x"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/tts_speed_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="29"
            android:progress="9" />

    </LinearLayout>

    <!-- 语音音调调节 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tts_pitch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音音调: 1.0"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/tts_pitch_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="19"
            android:progress="9" />

    </LinearLayout>

    <!-- 语音音量调节 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tts_volume_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音音量: 100%"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/tts_volume_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100" />

    </LinearLayout>

    <!-- 测试按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/tts_test_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="测试语音"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tts_stop_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="停止朗读"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>