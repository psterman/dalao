<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- 搜索引擎图标 -->
    <ImageView
        android:id="@+id/engine_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:background="@drawable/engine_icon_background"
        android:src="@drawable/ic_default_search_engine" />

    <!-- 搜索引擎信息 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 搜索引擎名称 -->
        <TextView
            android:id="@+id/engine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="搜索引擎"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/simple_mode_text_primary_light"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 搜索引擎描述 -->
        <TextView
            android:id="@+id/engine_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="搜索引擎描述"
            android:textSize="12sp"
            android:textColor="@color/simple_mode_text_secondary_light"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>
