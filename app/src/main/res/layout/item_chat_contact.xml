<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/chat_contact_card_background_light"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 头像容器 -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/contact_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_ai_ball"
                android:scaleType="centerCrop"
                android:background="@drawable/contact_avatar_background"
                app:tint="@color/chat_contact_avatar_tint_light" />

            <!-- 在线状态指示器 -->
            <View
                android:id="@+id/contact_online_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/online_indicator_background"
                android:visibility="gone" />

        </FrameLayout>

        <!-- 联系人信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 姓名和状态图标 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="联系人姓名"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/chat_contact_name_text_light"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- 置顶图标 -->
                <ImageView
                    android:id="@+id/contact_pinned_indicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_pin"
                    app:tint="@color/chat_contact_pinned_tint_light"
                    android:visibility="gone" />

                <!-- 静音图标 -->
                <ImageView
                    android:id="@+id/contact_muted_indicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_mute"
                    app:tint="@color/chat_contact_muted_tint_light"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 描述 -->
            <TextView
                android:id="@+id/contact_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系人描述"
                android:textSize="14sp"
                android:textColor="@color/chat_contact_description_text_light"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

            <!-- 最后消息和时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/contact_last_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="最后一条消息"
                    android:textSize="14sp"
                    android:textColor="@color/chat_contact_last_message_text_light"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/contact_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="12:34"
                    android:textSize="12sp"
                    android:textColor="@color/chat_contact_time_text_light" />

            </LinearLayout>

        </LinearLayout>

        <!-- 未读消息数 -->
        <TextView
            android:id="@+id/contact_unread_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:gravity="center"
            android:text="5"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/chat_contact_unread_text_light"
            android:background="@drawable/unread_count_background"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 