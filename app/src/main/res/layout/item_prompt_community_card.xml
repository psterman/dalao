<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/ai_assistant_card_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题和作者信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/prompt_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prompt标题"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/ai_assistant_text_primary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/prompt_author_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@匿名用户"
                        android:textSize="12sp"
                        android:textColor="@color/ai_assistant_text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" · "
                        android:textSize="12sp"
                        android:textColor="@color/ai_assistant_text_secondary" />

                    <TextView
                        android:id="@+id/prompt_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刚刚"
                        android:textSize="12sp"
                        android:textColor="@color/ai_assistant_text_secondary" />
                </LinearLayout>
            </LinearLayout>

            <!-- 分类标签 -->
            <TextView
                android:id="@+id/prompt_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行业"
                android:textSize="11sp"
                android:textColor="@color/ai_assistant_primary"
                android:background="@drawable/category_tag_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Prompt预览内容 -->
        <TextView
            android:id="@+id/prompt_preview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prompt预览内容..."
            android:textSize="14sp"
            android:textColor="@color/ai_assistant_text_primary"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- 标签区域 -->
        <TextView
            android:id="@+id/prompt_tags_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#标签1 #标签2"
            android:textSize="12sp"
            android:textColor="@color/ai_assistant_primary"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 底部操作栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 点赞 -->
            <LinearLayout
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_like_outline"
                    android:tint="@color/ai_assistant_text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/like_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="@color/ai_assistant_text_secondary" />
            </LinearLayout>

            <!-- 收藏 -->
            <LinearLayout
                android:id="@+id/collect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/collect_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_outline"
                    android:tint="@color/ai_assistant_text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/collect_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="@color/ai_assistant_text_secondary" />
            </LinearLayout>

            <!-- 评论 -->
            <LinearLayout
                android:id="@+id/comment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_comment"
                    android:tint="@color/ai_assistant_text_secondary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/comment_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="12sp"
                    android:textColor="@color/ai_assistant_text_secondary" />
            </LinearLayout>

            <!-- 弹性填充 -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 分享 -->
            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_share"
                android:background="@android:color/transparent"
                android:contentDescription="分享"
                android:tint="@color/ai_assistant_text_secondary"
                android:scaleType="fitCenter" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
