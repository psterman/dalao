<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:padding="16dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">


        <!-- AI名称和关闭按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI助手"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/btn_close_ai_panel"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="关闭"
                android:src="@drawable/ic_close"
                app:tint="@color/deepseek_icon_tint" />

        </LinearLayout>

    </LinearLayout>

    <!-- AI服务选择区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ai_service_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp">


        <Spinner
            android:id="@+id/ai_service_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spinner_background"
            android:padding="8dp" />


        <ImageButton
            android:id="@+id/btn_clear_ai_response"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="清除回复"
            android:src="@drawable/ic_close"
            app:tint="@color/deepseek_icon_tint" />

    </LinearLayout>

    <!-- 助手和身份按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_assistant"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="助手"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_prompt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="身份"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

    <!-- AI输入区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/ai_input_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <EditText
            android:id="@+id/ai_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="输入问题或指令..."
            android:textColor="@color/deepseek_text_color"
            android:textColorHint="@color/deepseek_icon_tint"
            android:textSize="14sp"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="3"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/btn_send_ai_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/send_button_background"
            android:contentDescription="发送"
            android:src="@drawable/ic_send_plane"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- AI回复区域 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 回复区域标题栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AI回复"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_fold_response"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="折叠/展开"
                    android:src="@drawable/ic_expand_less"
                    app:tint="@color/deepseek_icon_tint" />

            </LinearLayout>

            <!-- 回复内容区域 -->
            <ScrollView
                android:id="@+id/ai_response_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical"
                android:padding="16dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/ai_response_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择AI服务并输入问题获取回复..."
                    android:textColor="@color/deepseek_text_color"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp"
                    android:textIsSelectable="true" />

            </ScrollView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>
