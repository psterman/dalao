<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ai_assistant_panel_background"
    android:padding="16dp"
    android:elevation="12dp"
    android:minWidth="280dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_ai"
            android:layout_marginEnd="12dp"
            app:tint="?attr/colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI助手中心"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ai_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5个AI可用"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/close_panel_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <!-- 快速操作区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- 语音输入按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/voice_input_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="语音"
            android:textSize="12sp"
            app:icon="@drawable/ic_mic"
            app:iconSize="16dp"
            app:cornerRadius="20dp" />

        <!-- 历史记录按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/history_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="历史"
            android:textSize="12sp"
            app:icon="@drawable/ic_history"
            app:iconSize="16dp"
            app:cornerRadius="20dp" />

        <!-- 设置按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="设置"
            android:textSize="12sp"
            app:icon="@drawable/ic_settings"
            app:iconSize="16dp"
            app:cornerRadius="20dp" />

    </LinearLayout>

    <!-- AI服务选择控制区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI服务选择"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold" />

        <!-- 全选按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_all"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="全选"
            android:textSize="12sp"
            app:cornerRadius="16dp" />

        <!-- 清空按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_all_ai"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空"
            android:textSize="12sp"
            app:cornerRadius="16dp" />

    </LinearLayout>

    <!-- AI服务选择容器 -->
    <LinearLayout
        android:id="@+id/ai_engines_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp" />

    <!-- AI应用网格 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginBottom="12dp">

        <!-- AI按钮1 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ai_app_1"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ChatGPT"
                android:textSize="11sp"
                app:icon="@drawable/ic_chatgpt"
                app:iconSize="18dp"
                app:cornerRadius="16dp" />

            <View
                android:id="@+id/ai_status_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="top|end"
                android:background="@drawable/ai_status_indicator"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp" />

        </FrameLayout>

        <!-- AI按钮2 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ai_app_2"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kimi"
                android:textSize="11sp"
                app:icon="@drawable/ic_kimi"
                app:iconSize="18dp"
                app:cornerRadius="16dp" />

            <View
                android:id="@+id/ai_status_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="top|end"
                android:background="@drawable/ai_status_indicator"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp" />

        </FrameLayout>

        <!-- AI按钮3 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ai_app_3"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DeepSeek"
                android:textSize="11sp"
                app:icon="@drawable/ic_deepseek"
                app:iconSize="18dp"
                app:cornerRadius="16dp" />

            <View
                android:id="@+id/ai_status_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="top|end"
                android:background="@drawable/ai_status_indicator"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp" />

        </FrameLayout>

        <!-- AI按钮4 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ai_app_4"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gemini"
                android:textSize="11sp"
                app:icon="@drawable/ic_gemini"
                app:iconSize="18dp"
                app:cornerRadius="16dp" />

            <View
                android:id="@+id/ai_status_4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="top|end"
                android:background="@drawable/ai_status_indicator"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp" />

        </FrameLayout>

        <!-- AI按钮5 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ai_app_5"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Claude"
                android:textSize="11sp"
                app:icon="@drawable/ic_claude"
                app:iconSize="18dp"
                app:cornerRadius="16dp" />

            <View
                android:id="@+id/ai_status_5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="top|end"
                android:background="@drawable/ai_status_indicator"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp" />

        </FrameLayout>

        <!-- 更多按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/more_ai_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="更多"
            android:textSize="11sp"
            app:icon="@drawable/ic_ai"
            app:iconSize="18dp"
            app:cornerRadius="16dp" />

    </GridLayout>

    <!-- 底部提示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="长按AI应用可设为常用"
        android:textSize="10sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:background="@drawable/ai_tip_background"
        android:padding="8dp" />

</LinearLayout>