<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- 搜索框 -->
    <LinearLayout
        android:id="@+id/widget_search_box"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/search_box_background"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_search"
            android:tint="@color/widget_on_surface_variant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索应用、AI助手或网页..."
            android:textSize="14sp"
            android:textColor="@color/widget_on_surface_variant"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 应用图标区域 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- AI引擎图标 -->
        <ImageView
            android:id="@+id/ai_icon_1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/icon_background"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_zhipu"
            android:elevation="2dp" />

        <ImageView
            android:id="@+id/ai_icon_2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/icon_background"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_deepseek"
            android:elevation="2dp" />

        <!-- 应用图标 -->
        <ImageView
            android:id="@+id/app_icon_1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/icon_background"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:elevation="2dp" />

        <!-- 搜索引擎图标 -->
        <ImageView
            android:id="@+id/search_icon_1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/icon_background"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baidu"
            android:elevation="2dp" />

    </LinearLayout>

</LinearLayout>
