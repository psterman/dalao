<?xml version="1.0" encoding="utf-8"?>
<!--
  增强版链接操作菜单 - 搜索tab中链接长按弹出菜单
  提供完整的链接操作功能，包括打开、保存、分享、分析等
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- 菜单内容容器 -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxHeight="400dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/enhanced_link_menu_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/enhanced_menu_background"
            android:padding="12dp"
            android:minWidth="200dp"
            android:elevation="12dp">

            <!-- 链接预览区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/link_preview_background"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/link_favicon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/link_favicon_placeholder"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/link_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="链接"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/link_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击查看详情"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

            <!-- 主要操作区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 打开方式 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_open_current_tab"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="当前标签"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_web"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_open_new_tab"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="新标签"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_add"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 后台和浏览器 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_open_background"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="后台打开"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_open_in_background"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_open_browser"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="外部浏览器"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_web"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 复制和分享 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_copy_link"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="复制链接"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_copy"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_share_link"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="分享链接"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_share"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 复制文本和自由复制 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_copy_text"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="复制文本"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_copy_text"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_free_copy"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="自由复制"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_free_copy"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 下载和二维码 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_download_link"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="下载链接"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_download"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_generate_qr"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="生成二维码"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_qr_code"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 高级功能 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_link_info"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="链接信息"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_info"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/action_download_manager"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="下载管理"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_download"
                        app:iconGravity="start" />

                </LinearLayout>

                <!-- 广告屏蔽 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/action_block_ads"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="屏蔽相关广告"
                    android:textSize="14sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:icon="@drawable/ic_block_ads"
                    app:iconGravity="start" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
