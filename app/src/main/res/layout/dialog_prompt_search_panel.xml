<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ai_assistant_center_background_light">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/ai_assistant_primary">

        <ImageButton
            android:id="@+id/search_panel_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="返回"
            android:tint="@color/white" />

        <EditText
            android:id="@+id/search_panel_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/search_box_background"
            android:hint="搜索Prompt..."
            android:textSize="16sp"
            android:textColor="@color/ai_assistant_text_primary"
            android:textColorHint="@color/ai_assistant_text_hint"
            android:paddingHorizontal="16dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/search_panel_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search"
            android:contentDescription="搜索"
            android:tint="@color/white" />
    </LinearLayout>

    <!-- 内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 近期搜索 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="近期搜索"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/ai_assistant_text_primary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/recent_search_chips_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp" />

            <!-- 热门搜索 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门搜索"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/ai_assistant_text_primary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/hot_search_chips_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp" />

            <!-- 分类搜索 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类搜索"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/ai_assistant_text_primary"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_search_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>

