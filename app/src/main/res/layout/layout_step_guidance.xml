<?xml version="1.0" encoding="utf-8"?>
<!-- 步骤引导页面布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/step_guidance_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/simple_mode_background_light">

    <TextView
        android:id="@+id/step_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务名称 - 步骤 1/3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/simple_mode_text_primary_light"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/step_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入您的问题或描述"
        android:textSize="18sp"
        android:textColor="@color/simple_mode_text_primary_light"
        android:layout_marginBottom="24dp" />

    <!-- 文本输入字段 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/step_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint=""
        android:textColorHint="@color/simple_mode_input_hint_light"
        app:boxStrokeColor="@color/simple_mode_border_light"
        app:hintTextColor="@color/simple_mode_input_hint_light">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/step_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top"
            android:hint="请输入..."
            android:textColor="@color/simple_mode_input_text_light"
            android:textColorHint="@color/simple_mode_input_hint_light"
            android:background="@color/simple_mode_input_background_light" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 单选字段 -->
    <RadioGroup
        android:id="@+id/step_choice_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:visibility="gone" />

    <!-- 多选字段 -->
    <LinearLayout
        android:id="@+id/step_multi_choice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 步骤控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prev_step_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="上一步"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/simple_mode_button_primary_light" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/skip_step_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="跳过"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/simple_mode_text_secondary_light" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_step_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="下一步"
            android:backgroundTint="@color/simple_mode_button_primary_light"
            android:textColor="@color/simple_mode_button_text_light" />
    </LinearLayout>
</LinearLayout>
