<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/settings_item_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- 搜索引擎图标 -->
    <ImageView
        android:id="@+id/engine_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_search" />

    <!-- 搜索引擎信息 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/engine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索引擎名称"
            android:textColor="@color/simple_mode_text_primary_light"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/engine_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="搜索引擎描述"
            android:textColor="@color/simple_mode_text_secondary_light"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 拖动手柄 -->
    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_drag_handle"
        android:contentDescription="拖动排序"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        app:tint="@color/simple_mode_text_secondary_light" />

</LinearLayout>
