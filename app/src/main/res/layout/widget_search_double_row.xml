<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- 搜索框 -->
    <LinearLayout
        android:id="@+id/widget_search_box"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/search_box_background"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:tint="@color/widget_on_surface_variant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索应用、AI助手或网页..."
            android:textSize="15sp"
            android:textColor="@color/widget_on_surface_variant"
            android:layout_marginLeft="12dp"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 图标区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 第一排图标 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <!-- 图标1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/icon_1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- 图标2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/icon_2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- 图标3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:elevation="3dp" />

                <TextView
                    android:id="@+id/label_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="50dp" />

            </LinearLayout>

            <!-- 图标4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:elevation="3dp" />

                <TextView
                    android:id="@+id/label_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="50dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 第二排图标 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <!-- 图标5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_5"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:elevation="3dp" />

                <TextView
                    android:id="@+id/label_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="50dp" />

            </LinearLayout>

            <!-- 图标6 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_6"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:elevation="3dp" />

                <TextView
                    android:id="@+id/label_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="50dp" />

            </LinearLayout>

            <!-- 图标7 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_7"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:elevation="3dp" />

                <TextView
                    android:id="@+id/label_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="50dp" />

            </LinearLayout>

            <!-- 图标8 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_8"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:elevation="3dp" />

                <TextView
                    android:id="@+id/label_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="50dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
