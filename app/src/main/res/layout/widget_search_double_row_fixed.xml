<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- 搜索框 -->
    <LinearLayout
        android:id="@+id/widget_search_box"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/search_box_background"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_search"
            android:tint="@color/widget_on_surface_variant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索应用、AI助手或网页..."
            android:textSize="14sp"
            android:textColor="@color/widget_on_surface_variant"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 图标区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 第一排图标 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4"
            android:layout_marginBottom="6dp">

            <!-- 图标1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon_1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_background"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- 图标2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon_2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_background"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- 图标3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon_3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_background"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- 图标4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon_4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_background"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>

        <!-- 第二排图标 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <!-- 图标5-8 使用相同的结构 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon_5"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_background"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon_6"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_background"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon_7"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_background"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon_8"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/icon_background"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/label_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
