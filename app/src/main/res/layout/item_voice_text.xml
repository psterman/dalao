<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/simple_mode_card_background_light"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/simple_mode_accent_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 文本内容 -->
        <TextView
            android:id="@+id/voice_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/simple_mode_text_primary_light"
            android:lineSpacingExtra="4dp"
            android:maxLines="10"
            android:ellipsize="end" />

        <!-- 时间 -->
        <TextView
            android:id="@+id/voice_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/simple_mode_text_secondary_light" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>








