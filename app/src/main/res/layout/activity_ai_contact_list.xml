<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/simple_mode_background_light">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/simple_mode_header_background_light"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="返回"
            app:tint="@color/simple_mode_text_primary_light" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI联系人列表"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/simple_mode_text_primary_light"
            android:gravity="center"
            android:layout_marginStart="16dp" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- 添加自定义AI按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/simple_mode_card_background_light"
        android:layout_margin="16dp"
        android:elevation="2dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="➕ 添加自定义AI"
            android:textSize="16sp"
            android:padding="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/accent_color"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- AI联系人列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ai_contact_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false" />

</LinearLayout>
