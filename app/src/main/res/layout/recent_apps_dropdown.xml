<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/dynamic_island_input_background"
    android:orientation="vertical"
    android:padding="8dp"
    android:elevation="8dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="最近选中的APP"
        android:textColor="@color/dynamic_island_text_color"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- APP列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recent_apps_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:orientation="vertical" />

    <!-- 清空按钮 -->
    <Button
        android:id="@+id/clear_recent_apps_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/dynamic_island_button_background"
        android:text="清空历史"
        android:textColor="@color/dynamic_island_button_icon"
        android:textSize="12sp" />

</LinearLayout>
