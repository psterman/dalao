<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/simple_mode_background">

    <!-- 顶部状态栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI智能助手 - 简易模式"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
            
        <ImageButton
            android:id="@+id/simple_mode_minimize_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_minimize"
            android:contentDescription="最小化"
            app:tint="@android:color/white" />
            
        <ImageButton
            android:id="@+id/simple_mode_close_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="关闭"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- 任务选择页面 -->
    <LinearLayout
        android:id="@+id/task_selection_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp">
        
        <!-- 搜索框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/search_box_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <EditText
                android:id="@+id/direct_search_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="直接搜索或选择下方任务引导"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:gravity="center_vertical" />

            <ImageButton
                android:id="@+id/direct_search_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_search"
                android:contentDescription="搜索"
                android:scaleType="fitCenter"
                android:layout_marginStart="8dp" />
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="选择您的任务类型"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="我们将引导您一步步构建精准的搜索指令"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp" />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/task_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- 步骤引导页面 -->
    <LinearLayout
        android:id="@+id/step_guidance_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/step_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务名称 - 步骤 1/3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />
            
        <TextView
            android:id="@+id/step_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入您的问题或描述"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp" />
        
        <!-- 文本输入字段 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/step_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/step_input_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入..."
                android:minLines="3"
                android:gravity="top" />
        </com.google.android.material.textfield.TextInputLayout>
        
        <!-- 单选字段 -->
        <RadioGroup
            android:id="@+id/step_choice_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />
        
        <!-- 多选字段 -->
        <LinearLayout
            android:id="@+id/step_multi_choice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            android:visibility="gone" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        
        <!-- 步骤控制按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/prev_step_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="上一步"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/skip_step_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="跳过"
                style="@style/Widget.MaterialComponents.Button.TextButton" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_step_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="下一步" />
        </LinearLayout>
    </LinearLayout>

    <!-- Prompt预览页面 -->
    <LinearLayout
        android:id="@+id/prompt_preview_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生成的搜索指令"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">
                
                <TextView
                    android:id="@+id/final_prompt_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这里将显示最终生成的搜索指令..."
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />
            </ScrollView>
        </androidx.cardview.widget.CardView>
        
        <TextView
            android:id="@+id/recommended_engines_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="推荐引擎：DeepSeek、ChatGPT"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />
        
        <!-- 执行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_to_tasks_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="重新选择任务"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/execute_search_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="开始搜索" />
        </LinearLayout>
    </LinearLayout>

    <!-- 语音页面 -->
    <LinearLayout
        android:id="@+id/voice_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:visibility="gone">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音输入"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="32dp" />
        
        <!-- 麦克风容器 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/voice_mic_container"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="60dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/voice_mic_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic"
                app:tint="@android:color/white" />
        </com.google.android.material.card.MaterialCardView>
        
        <!-- 状态文本 -->
        <TextView
            android:id="@+id/voice_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击麦克风开始语音输入"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp"
            android:gravity="center" />
        
        <!-- 识别文本显示和编辑 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/voice_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/voice_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="识别的文本将显示在这里"
                android:minLines="3"
                android:gravity="top"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        
        <!-- 控制按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/voice_clear_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="清空"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/voice_search_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="开始搜索" />
        </LinearLayout>
    </LinearLayout>

    <!-- 设置页面 -->
    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />
        
        <!-- 网格布局容器 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="8"
            android:useDefaultMargins="true">
            
            <!-- 显示模式 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="显示模式"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <Spinner
                    android:id="@+id/display_mode_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
            <!-- 窗口数量 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认窗口数"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <Spinner
                    android:id="@+id/window_count_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
            <!-- 剪贴板监控 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剪贴板监控"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/clipboard_monitor_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用" />
            </LinearLayout>
            
            <!-- 自动隐藏 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动隐藏"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/auto_hide_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用" />
            </LinearLayout>
            
            <!-- AI模式 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI模式"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/ai_mode_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用" />
            </LinearLayout>
            
            <!-- 主题模式 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主题模式"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <Spinner
                    android:id="@+id/theme_mode_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
            <!-- 悬浮球透明度 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="悬浮球透明度"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <SeekBar
                    android:id="@+id/ball_alpha_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="80" />
            </LinearLayout>
            
            <!-- 左手模式 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="左手模式"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/left_handed_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="启用" />
            </LinearLayout>
            
            <!-- AI API设置 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/ai_api_settings_item">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI API设置"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配置AI接口"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
            
            <!-- 搜索引擎设置 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/search_engine_settings_item">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索引擎"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管理搜索引擎"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
            
            <!-- 主提示词设置 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/master_prompt_settings_item">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主提示词"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配置提示词"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
            
            <!-- 应用信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/settings_item_background">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应用版本"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:id="@+id/app_version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0.0"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <LinearLayout
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            
