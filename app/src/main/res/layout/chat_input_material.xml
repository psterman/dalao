<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/material_chat_surface"
    android:elevation="8dp">

    <!-- 功能按钮区域 -->
    <HorizontalScrollView
        android:id="@+id/function_buttons_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/function_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 语音输入按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_voice_input"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="语音"
                android:textSize="12sp"
                app:icon="@drawable/ic_mic"
                app:iconSize="16dp"
                app:cornerRadius="20dp" />

            <!-- 图片输入按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_image_input"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="图片"
                android:textSize="12sp"
                app:icon="@drawable/ic_image"
                app:iconSize="16dp"
                app:cornerRadius="20dp" />

            <!-- 文件输入按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_file_input"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="文件"
                android:textSize="12sp"
                app:icon="@drawable/ic_attach_file"
                app:iconSize="16dp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_dialog_border"
        android:layout_marginHorizontal="16dp" />

    <!-- 输入区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="bottom">

        <!-- 展开/收起功能按钮 -->
        <ImageButton
            android:id="@+id/btn_toggle_functions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_add"
            android:tint="@color/material_wechat_primary"
            android:contentDescription="更多功能"
            android:scaleType="fitCenter" />

        <!-- 输入框容器 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="@color/material_dialog_input_background"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/material_dialog_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <EditText
                    android:id="@+id/message_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="输入消息..."
                    android:textColor="@color/material_dialog_text_primary"
                    android:textColorHint="@color/material_dialog_text_hint"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:maxLines="4"
                    android:minHeight="32dp"
                    android:gravity="center_vertical"
                    android:inputType="textMultiLine|textCapSentences" />

                <!-- 表情按钮 -->
                <ImageButton
                    android:id="@+id/btn_emoji"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_emoji_emotions"
                    android:tint="@color/material_dialog_text_hint"
                    android:contentDescription="表情"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 发送按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            app:fabSize="mini"
            app:backgroundTint="@color/material_wechat_primary"
            app:tint="@color/material_wechat_on_primary"
            app:elevation="2dp"
            app:pressedTranslationZ="4dp"
            android:contentDescription="发送消息" />

    </LinearLayout>

</LinearLayout>
