<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ai_assistant_center_background_light">

    <!-- 子标签导航 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/ai_config_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:tabTextColor="@color/ai_assistant_tab_unselected"
        app:tabSelectedTextColor="@color/ai_assistant_primary"
        app:tabIndicatorColor="@color/ai_assistant_primary"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabBackground="@color/ai_assistant_card_background"
        app:tabRippleColor="@color/ai_assistant_ripple" />

    <!-- 内容区域 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ai_config_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="never" />

</LinearLayout>
