<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- 搜索框 -->
    <LinearLayout
        android:id="@+id/widget_search_box"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/search_box_background"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:tint="@color/text_secondary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索应用、AI助手或网页..."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginLeft="12dp"
            android:singleLine="true" />

    </LinearLayout>

    <!-- 应用图标区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 分类标题：AI & 搜索 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤖 AI &amp; 🔍 搜索"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- AI引擎行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ai_icon_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_zhipu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智谱"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/ai_icon_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_deepseek" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DeepSeek"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/app_icon_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应用"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/search_icon_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_background"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baidu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="百度"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
