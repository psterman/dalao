<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- 搜索框 -->
    <LinearLayout
        android:id="@+id/widget_search_box"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/search_box_background"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_search"
            android:tint="@color/widget_on_surface_variant" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="搜索应用、AI助手或网页..."
            android:textSize="16sp"
            android:textColor="@color/widget_on_surface_variant"
            android:layout_marginLeft="14dp"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 应用图标区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 分类标题：AI & 搜索 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤖 AI助手 &amp; 🔍 搜索"
            android:textSize="13sp"
            android:textColor="@color/widget_on_surface"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <!-- AI引擎行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ai_icon_1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_zhipu"
                    android:elevation="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智谱"
                    android:textSize="11sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="6dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/ai_icon_2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_deepseek"
                    android:elevation="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DeepSeek"
                    android:textSize="11sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="6dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/app_icon_1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:elevation="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应用"
                    android:textSize="11sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="6dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/search_icon_1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/icon_background"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baidu"
                    android:elevation="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="百度"
                    android:textSize="11sp"
                    android:textColor="@color/widget_on_surface"
                    android:layout_marginTop="6dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
