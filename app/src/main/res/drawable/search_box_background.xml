<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Material Design 搜索框阴影 -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#06000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Material Design 搜索框主背景 -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <!-- Material Design 3的Surface Container Highest颜色 -->
            <solid android:color="@color/widget_surface_container_highest" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="@color/widget_outline_variant" />
        </shape>
    </item>

    <!-- Material Design 搜索框内部高光 -->
    <item android:bottom="1dp" android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#06FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="23dp" />
        </shape>
    </item>

</layer-list>