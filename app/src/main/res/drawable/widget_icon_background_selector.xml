<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#E0E0E0" />
            <stroke android:width="2dp" android:color="@color/widget_accent_color" />
        </shape>
    </item>
    
    <!-- 正常状态 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/widget_icon_background" />
            <stroke android:width="1dp" android:color="@color/widget_border_color" />
        </shape>
    </item>
    
</selector>
