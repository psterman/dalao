<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outermost dark grey circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/floating_ball_icon_light" />
            <size android:width="56dp" android:height="56dp"/>
        </shape>
    </item>
    <!-- Middle lighter grey circle -->
    <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
        <shape android:shape="oval">
            <solid android:color="@color/floating_ball_icon_dark" />
        </shape>
    </item>
    <!-- Central white circle, larger radius -->
    <item android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list> 