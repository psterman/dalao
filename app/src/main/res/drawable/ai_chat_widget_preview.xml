<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 背景 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F3E5F5"
                android:endColor="#E1BEE7"
                android:angle="135" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#CE93D8" />
        </shape>
    </item>
    
    <!-- 图标 -->
    <item
        android:left="12dp"
        android:top="12dp"
        android:width="32dp"
        android:height="32dp">
        <shape android:shape="oval">
            <solid android:color="#6366F1" />
        </shape>
    </item>
    
    <!-- 文字区域 -->
    <item
        android:left="56dp"
        android:top="16dp"
        android:right="32dp"
        android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>
    
</layer-list>
