<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中状态 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/webview_tab_selected" />
            <corners 
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <stroke 
                android:width="1dp"
                android:color="@color/colorPrimary" />
        </shape>
    </item>
    
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/webview_tab_pressed" />
            <corners 
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/webview_tab_normal" />
            <corners 
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <stroke 
                android:width="1dp"
                android:color="@color/webview_tab_border" />
        </shape>
    </item>
</selector>
