<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/elderly_button_pressed" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/elderly_primary" />
        </shape>
    </item>
    
    <!-- 获得焦点状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/elderly_background" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/elderly_primary" />
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/elderly_background" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/elderly_border" />
        </shape>
    </item>
</selector>
