<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/simple_mode_input_background_light" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/simple_mode_accent_light" />
        </shape>
    </item>
    
    <!-- 获得焦点状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/simple_mode_input_background_light" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="2dp" 
                android:color="@color/simple_mode_accent_light" />
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/simple_mode_input_background_light" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/simple_mode_border_light" />
        </shape>
    </item>
</selector>
