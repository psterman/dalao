<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态：更明显的高亮效果 -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/dynamic_island_expand_button_pressed_background" />
            <stroke android:width="1dp" android:color="@color/dynamic_island_expand_button_pressed_stroke" />
        </shape>
    </item>
    <!-- 聚焦状态：轻微高亮 -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/dynamic_island_expand_button_focused_background" />
            <stroke android:width="1dp" android:color="@color/dynamic_island_expand_button_focused_stroke" />
        </shape>
    </item>
    <!-- 默认状态：绿色主题，表示可展开 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/dynamic_island_expand_button_normal_background" />
            <stroke android:width="1dp" android:color="@color/dynamic_island_expand_button_normal_stroke" />
        </shape>
    </item>
</selector>
