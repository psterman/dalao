<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.AIFloatingBall" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Material Design 3 颜色 -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>
    </style>

    <!-- 剪贴板弹窗主题 -->
    <style name="Theme.ClipboardDialog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 窗口设置 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        
        <!-- Material Design 3 主题设置 -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button.TonalButton</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Material3.Button.TextButton</item>
        <item name="checkboxStyle">@style/Widget.Material3.CompoundButton.CheckBox</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Material3.BodyMedium</item>
        
        <!-- 颜色设置 -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="android:textColorPrimary">@color/md_theme_dark_onSurface</item>
        <item name="android:textColorSecondary">@color/md_theme_dark_onSurfaceVariant</item>
    </style>

    <!-- 统一的Material Design对话框主题 - 暗色模式 -->
    <style name="Theme.MaterialDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/material_dialog_background_v2</item>
        <item name="colorPrimary">@color/material_wechat_primary</item>
        <item name="colorOnPrimary">@color/material_wechat_on_primary</item>
        <item name="colorSurface">@color/material_dialog_surface</item>
        <item name="colorOnSurface">@color/material_dialog_on_surface</item>
        <item name="colorSurfaceVariant">@color/material_dialog_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/material_dialog_on_surface_variant</item>
        <item name="android:textColorPrimary">@color/material_dialog_text_primary</item>
        <item name="android:textColorSecondary">@color/material_dialog_text_secondary</item>
        <item name="materialButtonStyle">@style/Widget.MaterialDialog.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MaterialDialog.Button.Outlined</item>
        <item name="checkboxStyle">@style/Widget.MaterialDialog.CheckBox</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogAnimation</item>
    </style>

    <!-- Material对话框按钮样式 - 暗色模式 -->
    <style name="Widget.MaterialDialog.Button" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/material_dialog_button_tonal</item>
        <item name="android:textColor">@color/material_dialog_button_text_tonal</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/material_dialog_button_ripple</item>
    </style>

    <!-- Material对话框轮廓按钮样式 - 暗色模式 -->
    <style name="Widget.MaterialDialog.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/material_dialog_button_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/material_dialog_button_text_outlined</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/material_dialog_button_ripple</item>
    </style>

    <!-- Material对话框复选框样式 - 暗色模式 -->
    <style name="Widget.MaterialDialog.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/material_dialog_checkbox_tint</item>
        <item name="android:textColor">@color/material_dialog_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Material对话框动画 - 暗色模式 -->
    <style name="MaterialDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

</resources>