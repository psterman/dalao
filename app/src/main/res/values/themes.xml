<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AIFloatingBall" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar_background_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/toolbar_background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="icon_tint_color">@color/icon_tint_light_theme</item>

        <!-- Explicitly define container colors for selection states -->
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
    </style>

    <style name="Theme.AIFloatingBall.NoActionBar" parent="Theme.AIFloatingBall">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AIFloatingBall.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AIFloatingBall.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 悬浮窗服务使用的主题 -->
    <style name="Theme.FloatingWindow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 在这里定义悬浮窗特有的样式 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        
        <!-- 定义功能性图标颜色 -->
        <item name="functionalIconColor">#FF007AFF</item> <!-- 示例颜色: 蓝色 -->
        
        <!-- 定义非功能性图标颜色 -->
        <item name="nonFunctionalIconColor">#FF8E8E93</item> <!-- 示例颜色: 灰色 -->
        
        <!-- 定义悬浮窗背景色 -->
        <item name="floatingWindowBackground">#F2F2F7</item> <!-- 示例颜色: 浅灰色 -->
    </style>

    <style name="YourTitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- 页面信息对话框主题 -->
    <style name="Theme_AIFloatingBall_Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="Theme.AIFloatingBall.VoiceRecognition" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources> 