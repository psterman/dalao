<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AIFloatingBall" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Material Design 3 颜色 -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar_background_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/toolbar_background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="icon_tint_color">@color/icon_tint_light_theme</item>

        <!-- Explicitly define container colors for selection states -->
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
    </style>

    <style name="Theme.AIFloatingBall.NoActionBar" parent="Theme.AIFloatingBall">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AIFloatingBall.Settings" parent="Theme.AIFloatingBall">
        <!-- Add any specific styles for settings activities here -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AIFloatingBall.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AIFloatingBall.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 悬浮窗服务使用的主题 -->
    <style name="Theme.FloatingWindow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 在这里定义悬浮窗特有的样式 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        
        <!-- 定义功能性图标颜色 -->
        <item name="functionalIconColor">#FF007AFF</item> <!-- 示例颜色: 蓝色 -->
        
        <!-- 定义非功能性图标颜色 -->
        <item name="nonFunctionalIconColor">#FF8E8E93</item> <!-- 示例颜色: 灰色 -->
        
        <!-- 定义悬浮窗背景色 -->
        <item name="floatingWindowBackground">#F2F2F7</item> <!-- 示例颜色: 浅灰色 -->
    </style>

    <style name="YourTitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- 页面信息对话框主题 -->
    <style name="Theme_AIFloatingBall_Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="Theme.AIFloatingBall.VoiceRecognition" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Onboarding" parent="Theme.AIFloatingBall.NoActionBar">
        <!-- Customize your theme for the onboarding screen here. -->
    </style>

    <!-- This is the style that was missing -->
    <style name="ServiceDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <!-- 剪贴板弹窗主题 -->
    <style name="Theme.ClipboardDialog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 窗口设置 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        
        <!-- Material Design 3 主题设置 -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button.TonalButton</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Material3.Button.TextButton</item>
        <item name="checkboxStyle">@style/Widget.Material3.CompoundButton.CheckBox</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Material3.BodyMedium</item>
        
        <!-- 颜色设置 -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:textColorPrimary">@color/md_theme_light_onSurface</item>
        <item name="android:textColorSecondary">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <style name="ClipboardDialogTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ClipboardDialogButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="iconPadding">8dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ClipboardDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>

    <style name="Theme_DynamicIsland" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!-- Material Design主题颜色 -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
    </style>

</resources>