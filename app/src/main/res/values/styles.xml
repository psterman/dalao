<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="FloatingCardDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- 基础应用主题 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 状态栏样式 -->
        <item name="android:statusBarColor">@color/simple_mode_status_bar_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- 简易模式开关样式 -->
    <style name="SimpleModeSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/simple_mode_text_secondary_light</item>
        <item name="thumbTint">@color/simple_mode_switch_thumb</item>
        <item name="trackTint">@color/simple_mode_switch_track</item>
    </style>

    <!-- 简易模式Spinner样式 -->
    <style name="SimpleModeSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/simple_mode_text_primary_light</item>
        <item name="android:background">@color/simple_mode_input_background_light</item>
        <item name="android:popupBackground">@color/simple_mode_card_background_light</item>
    </style>

    <!-- Material Design 分类按钮样式 -->
    <style name="MaterialCategoryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/simple_mode_text_primary_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconTint">@color/simple_mode_accent_light</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="rippleColor">@color/simple_mode_green_100_light</item>
    </style>

    <!-- Material Design 分类按钮选中状态 -->
    <style name="MaterialCategoryButtonSelected" parent="MaterialCategoryButton">
        <item name="backgroundTint">@color/simple_mode_green_100_light</item>
        <item name="android:textColor">@color/simple_mode_accent_light</item>
        <item name="strokeColor">@color/simple_mode_accent_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- 对话Tab文字样式 -->
    <style name="ChatTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- 对话列表项样式 -->
    <style name="ChatItemStyle">
        <item name="android:background">@drawable/chat_item_selector</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <!-- 简易模式专用主题 -->
    <style name="AppTheme.SimpleMode" parent="AppTheme">
        <item name="android:statusBarColor">@color/simple_mode_header_background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.Rtl" parent="AppTheme">
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/floating_window_background</item>
        <item name="android:textColorPrimary">@color/floating_text_primary</item>
        <item name="android:textColorSecondary">@color/floating_menu_text_secondary</item>
    </style>

    <style name="TransparentDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomBarButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
        <item name="android:tint">?android:attr/textColorSecondary</item>
    </style>

    <!-- 设置网格项样式 -->
    <style name="SettingsGridItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- 设置图标样式 -->
    <style name="SettingsIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <!-- 设置文本样式 -->
    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Circular FAB style -->
    <style name="CircularFAB">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Search engine shortcut style -->
    <style name="SearchEngineShortcut">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/shortcut_item_background</item>
    </style>

    <!-- 语音搜索对话框样式 -->
    <style name="VoiceSearchDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/VoiceDialogAnimation</item>
    </style>

    <!-- 语音对话框动画 -->
    <style name="VoiceDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/voice_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/voice_dialog_exit</item>
    </style>

    <style name="CustomMenuAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomMenuDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#555555</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextSelectionMenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LightTextSelectionMenuItem" parent="TextSelectionMenuItem">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
        <item name="android:textColor">@color/floating_menu_text_secondary</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SearchContainerStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/floating_window_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SectionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SectionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SearchInputStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- 剪贴板弹窗动画 -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>
</resources>