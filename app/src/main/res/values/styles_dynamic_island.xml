<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- 灵动岛配置面板按钮样式 -->
    <style name="DynamicIslandConfigButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconSize">18dp</item>
        <item name="iconPadding">4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="rippleColor">@color/dynamic_island_button_ripple</item>
        <item name="backgroundTint">@color/dynamic_island_button_background</item>
        <item name="android:textColor">@color/dynamic_island_button_text</item>
        <item name="iconTint">@color/dynamic_island_button_icon</item>
        <item name="strokeColor">@color/dynamic_island_button_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- 设置按钮特殊样式 -->
    <style name="DynamicIslandSettingsButton" parent="DynamicIslandConfigButton">
        <item name="backgroundTint">@color/dynamic_island_settings_button_background</item>
        <item name="android:textColor">@color/dynamic_island_settings_button_text</item>
        <item name="iconTint">@color/dynamic_island_settings_button_icon</item>
        <item name="strokeColor">@color/dynamic_island_settings_button_stroke</item>
    </style>

</resources>
