<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.aifloatingball">
    
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CLIPBOARD" />
    <uses-permission android:name="android.permission.WRITE_CLIPBOARD" />

    <!-- 小组件相关权限 -->
    <uses-permission android:name="android.permission.BIND_APPWIDGET" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <!-- 小米MIUI权限 -->
    <uses-permission android:name="miui.permission.USE_INTERNAL_GENERAL_API" />
    <uses-permission android:name="com.miui.home.launcher.permission.WRITE_SETTINGS" />

    <!-- vivo权限 -->
    <uses-permission android:name="com.vivo.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.bbk.launcher2.permission.WRITE_SETTINGS" />

    <!-- OPPO/OnePlus权限 -->
    <uses-permission android:name="com.oneplus.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.coloros.launcher.permission.WRITE_SETTINGS" />

    <!-- 华为/荣耀权限 -->
    <uses-permission android:name="com.huawei.android.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.hihonor.android.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.huawei.launcher3.permission.WRITE_SETTINGS" />

    <!-- 魅族权限 -->
    <uses-permission android:name="com.meizu.flyme.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.meizu.launcher.permission.WRITE_SETTINGS" />

    <!-- 三星权限 -->
    <uses-permission android:name="com.sec.android.app.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.samsung.android.app.launcher.permission.WRITE_SETTINGS" />

    <!-- realme权限 -->
    <uses-permission android:name="com.realme.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.oppo.launcher.permission.WRITE_SETTINGS" />

    <!-- 通用启动器权限 -->
    <uses-permission android:name="com.android.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.google.android.launcher.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Android 11+ 应用检测权限 -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    
    <!-- 声明需要查询的应用包名 -->
    <queries>
        <!-- AI应用 -->
        <package android:name="com.deepseek.chat" />
        <package android:name="com.openai.chatgpt" />
        <package android:name="com.larus.nova" />
        <package android:name="com.moonshot.kimichat" />
        <package android:name="com.tencent.hunyuan.app.chat" />
        
        <!-- 常用应用 -->
        <package android:name="com.tencent.mm" />
        <package android:name="com.tencent.mobileqq" />
        <package android:name="com.sina.weibo" />
        <package android:name="com.ss.android.ugc.aweme" />
        <package android:name="com.zhihu.android" />
        <package android:name="com.xingin.xhs" />
        <package android:name="com.taobao.taobao" />
        <package android:name="com.jingdong.app.mall" />
        <package android:name="com.tmall.wireless" />
        <package android:name="com.eg.android.AlipayGphone" />
        <package android:name="com.tencent.wework" />
        <package android:name="com.alibaba.android.rimet" />
        
        <!-- 浏览器 -->
        <package android:name="com.android.chrome" />
        <package android:name="com.UCMobile" />
        <package android:name="com.qihoo.browser" />
        <package android:name="com.baidu.searchbox" />
        
        <!-- 通用intent过滤器 -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="http" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
    </queries>
    
    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AIFloatingBall"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".StartActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- 应用快捷方式 (暂时禁用) -->
            <!--
            <meta-data android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
            -->
        </activity>



        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />

        <!-- 引导页面Activity -->
        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:theme="@style/Theme.Onboarding"
            android:exported="false" />
        <activity
            android:name=".PermissionManagementActivity"
            android:exported="false"
            android:label="权限管理"
            android:parentActivityName=".SettingsActivity"
            android:theme="@style/Theme.AIFloatingBall.Settings" />

        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AIFloatingBall.Settings">
        </activity>

        <activity android:name=".SearchActivity" />
        <activity
            android:name=".settings.AppSearchSettingsActivity"
            android:exported="false"
            android:label="应用内搜索管理"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar"/>
        <activity android:name=".SearchEngineManagerActivity" />
        <activity android:name=".SearchEngineGroupManagerActivity" />
        <activity
            android:name=".MenuManagerActivity"
            android:exported="false"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity
            android:name=".MasterPromptSettingsActivity"
            android:label="@string/title_master_prompt_settings"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar"/>
        <activity
            android:name=".MasterPromptSimpleActivity"
            android:label="@string/title_master_prompt_settings"
            android:theme="@style/Theme.AIFloatingBall.Settings"/>

        <activity
            android:name=".AIApiSettingsActivity"
            android:label="@string/ai_api_settings"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity
            android:name=".AIApiConfigActivity"
            android:exported="false"
            android:label="AI API配置"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity
            android:name=".AISearchEngineSettingsActivity"
            android:exported="false"
            android:label="AI搜索引擎设置"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity
            android:name=".DeepSeekDiagnosticActivity"
            android:exported="false"
            android:label="DeepSeek API诊断"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />

        <!-- AI联系人列表Activity -->
        <activity
            android:name=".AIContactListActivity"
            android:exported="false"
            android:label="AI联系人列表"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />

        <!-- AI标签管理Activity -->
        <activity
            android:name=".activity.AITagManagementActivity"
            android:exported="false"
            android:label="AI标签管理"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
            
        <!-- 截图功能Activity -->
        <activity
            android:name=".ScreenshotActivity"
            android:exported="false"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar"
            android:configChanges="orientation|screenSize|keyboardHidden" />


                    <!-- 添加联系人相关Activity -->
            <activity
                android:name=".AddAIContactActivity"
                android:exported="false"
                android:label="添加AI助手"
                android:theme="@style/Theme.AIFloatingBall.NoActionBar" />

            <activity
                android:name=".ChatActivity"
                android:exported="false"
                android:label="聊天"
                android:theme="@style/Theme.AIFloatingBall.NoActionBar"
                android:windowSoftInputMode="adjustResize|stateHidden" />

            <!-- 群聊设置Activity -->
            <activity
                android:name=".GroupChatSettingsActivity"
                android:exported="false"
                android:label="群聊设置"
                android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity android:name=".SubSettingsActivity"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity
            android:name=".settings.AppSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".SearchHistoryActivity"
            android:label="搜索历史" />
        <activity
            android:name=".VoiceRecognitionActivity"
            android:theme="@style/Theme.AIFloatingBall.VoiceRecognition"
            android:exported="false" />
        <activity
            android:name=".BookmarkActivity"
            android:exported="false"
            android:label="书签管理"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity
            android:name=".MenuSettingsActivity"
            android:exported="false"
            android:label="菜单设置"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity
            android:name=".FullscreenWebViewActivity"
            android:exported="false"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />

        <!-- 多标签页浏览器 -->
        <activity
            android:name=".MultiTabBrowserActivity"
            android:exported="true"
            android:theme="@style/Theme.AIFloatingBall"
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PermissionActivity"
            android:exported="false"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity
            android:name=".SearchEngineSettingsActivity"
            android:exported="false"
            android:label="搜索引擎设置"
            android:theme="@style/Theme.AIFloatingBall.NoActionBar" />
        <activity
            android:name=".ClipboardDialogActivity"
            android:theme="@style/Theme.ClipboardDialog"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:windowSoftInputMode="adjustResize" />
            
        <activity
            android:name=".SimpleModeActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.SimpleMode"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <service
            android:name=".service.FloatingWindowService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse"
            android:stopWithTask="false" />
            
        <service
            android:name=".service.DynamicIslandService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse"
            android:stopWithTask="false"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:configChanges="orientation|screenSize|keyboardHidden" />
            
        <service
            android:name=".service.SimpleModeService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse"
            android:theme="@style/Theme.MaterialComponents.Light" />
            
        <service
            android:name=".FloatingWebViewService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse"
            android:theme="@style/Theme.MaterialComponents.Light" />
            
        <service
            android:name=".service.DualFloatingWebViewService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout"
            android:theme="@style/Theme.MaterialComponents.Light" />
            
        <service
            android:name=".service.WebViewToolbarService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".FloatingBackButtonService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".service.MyAccessibilityService"
            android:exported="false"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
            
        <service
            android:name=".service.NotificationListener"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <receiver android:name=".widget.SearchWidgetProvider"
            android:exported="true"
            android:enabled="true"
            android:label="@string/enhanced_search_widget_description">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
                <!-- 自定义Action -->
                <action android:name="com.example.aifloatingball.WIDGET_AI_CHAT" />
                <action android:name="com.example.aifloatingball.WIDGET_APP_SEARCH" />
                <action android:name="com.example.aifloatingball.WIDGET_WEB_SEARCH" />
                <action android:name="com.example.aifloatingball.WIDGET_INPUT_CLICK" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/search_widget_info" />
        </receiver>

        <!-- AI Chat Widget Provider -->
        <receiver android:name=".widget.AiChatWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/ai_chat_widget_info" />
        </receiver>

        <!-- App Search Widget Provider -->
        <receiver android:name=".widget.AppSearchWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/app_search_widget_info" />
        </receiver>

        <!-- Web Search Widget Provider -->
        <receiver android:name=".widget.WebSearchWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/web_search_widget_info" />
        </receiver>

        <!-- 可定制小组件 -->
        <receiver android:name="com.example.dalao.widget.CustomizableWidgetProvider"
            android:exported="true"
            android:enabled="true"
            android:label="智能定制小组件">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
                <!-- 自定义Action -->
                <action android:name="com.example.aifloatingball.WIDGET_CLICK" />
                <action android:name="com.example.aifloatingball.WIDGET_SEARCH_CLICK" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/customizable_widget_info" />
        </receiver>

        <!-- 可定制小组件配置Activity -->
        <activity
            android:name="com.example.dalao.widget.WidgetConfigActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="小组件配置">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- 小组件演示Activity -->
        <activity
            android:name="com.example.dalao.widget.WidgetDemoActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="小组件演示" />

        <!-- 小组件配置Activity -->
        <activity
            android:name=".widget.WidgetConfigureActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:label="配置搜索小组件">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- 小组件帮助Activity -->
        <activity
            android:name=".widget.WidgetHelpActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="小组件使用帮助" />

        <!-- 测试活动 - 移除启动器注册，避免在桌面显示 -->
        <activity
            android:name=".TestMinimizeActivity"
            android:exported="false"
            android:label="测试最小化" />

        <!-- 桌面小组件 (暂时禁用) -->
        <!--
        <receiver
            android:name=".widget.ModeQuickSwitchWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/mode_quick_switch_widget_info" />
        </receiver>
        -->

        <!-- FileProvider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${packageName}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

    <queries>
        <!-- 允许查询所有支持网页浏览的应用 -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>

        <!-- 允许查询支持自定义URL Scheme的应用 -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="*" />
        </intent>

        <!-- 允许查询语音识别服务 -->
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
    </queries>

</manifest>